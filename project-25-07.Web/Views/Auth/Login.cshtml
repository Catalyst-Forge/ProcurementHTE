@using project_25_07.Core.Models.ViewModels
@model LoginViewModel
@{ 
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card login-container">
            <div class="card-header">
                <h1 class="fs-3">Login</h1>
            </div>

            <div class="card-body">
                <form asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                    <div class="text-danger" asp-validation-summary="All"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary login-button">Submit</button>
                </form>

                <div class="text-center mt-3">
                    <p>Belum punya akun? <a asp-action="Register">Daftar di sini</a></p>
                </div>
            </div>
        </div>
    </div>
</div>