                </fieldset>
            </div>
        </section>

        <!-- ================= PENAWARAN VENDOR ================= -->
        <section class="col-12" aria-labelledby="offer-section-title">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h3 class="card-title fw-semibold mb-0" id="offer-section-title">Vendor Offers</h3>
                        <button type="button" class="btn btn-outline-primary btn-sm" id="btnAddVendor">
