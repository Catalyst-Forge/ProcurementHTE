@using ProcurementHTE.Web.Models.ViewModels
@using System.Globalization
@using System.Text.Json
@model ProfitLossEditViewModel

@{
    ViewData["Title"] = "Edit Profit & Loss";
    var procurementItems = Model.OfferItems ?? new List<ProcOfferLiteVm>();
    var items = (Model.Items ?? new List<ItemTariffInputVm>()).ToList();
    var vendorChoices = (Model.VendorChoices ?? Enumerable.Empty<VendorChoiceViewModel>()).ToList();
    var selectedVendorIds = (Model.SelectedVendorIds ?? new List<string>())
        .Where(id => !string.IsNullOrWhiteSpace(id))
        .Distinct(StringComparer.OrdinalIgnoreCase)
        .ToList();
    var vendors = (Model.Vendors ?? new List<VendorItemOfferInputVm>()).ToList();

    if (procurementItems.Count > 0)
    {
        var orderedItems = new List<ItemTariffInputVm>(procurementItems.Count);
        var lookup = items.ToDictionary(x => x.ProcOfferId ?? string.Empty, StringComparer.OrdinalIgnoreCase);
        foreach (var item in procurementItems)
        {
            if (lookup.TryGetValue(item.ProcOfferId, out var existing))
            {
                orderedItems.Add(existing);
            }
            else
            {
                orderedItems.Add(new ItemTariffInputVm { ProcOfferId = item.ProcOfferId });
            }
        }
        items = orderedItems;
    }

    var vendorMap = vendors.ToDictionary(v => v.VendorId ?? string.Empty, StringComparer.OrdinalIgnoreCase);
    foreach (var vendorId in selectedVendorIds)
    {
        if (string.IsNullOrWhiteSpace(vendorId) || vendorMap.ContainsKey(vendorId))
            continue;

        var placeholder = new VendorItemOfferInputVm
        {
            VendorId = vendorId,
            Items = procurementItems
                .Select(item => new VendorOfferPerItemInputVm
                {
                    ProcOfferId = item.ProcOfferId,
                    Prices = new List<decimal>(),
                    Letters = new List<string>(),
                })
                .ToList(),
        };
        vendors.Add(placeholder);
        vendorMap[vendorId] = placeholder;
    }

    foreach (var vendor in vendors)
    {
        vendor.Items ??= new List<VendorOfferPerItemInputVm>();
        var itemDict = vendor.Items.ToDictionary(i => i.ProcOfferId ?? string.Empty, StringComparer.OrdinalIgnoreCase);
        var ordered = new List<VendorOfferPerItemInputVm>();
        foreach (var item in procurementItems)
        {
            if (itemDict.TryGetValue(item.ProcOfferId, out var existing))
            {
                existing.Prices ??= new List<decimal>();
                existing.Letters ??= new List<string>();
                ordered.Add(existing);
            }
            else
            {
                ordered.Add(
                    new VendorOfferPerItemInputVm
                    {
                        ProcOfferId = item.ProcOfferId,
                        Prices = new List<decimal>(),
                        Letters = new List<string>(),
                    }
                );
            }
        }
        vendor.Items = ordered;
    }

    var vendorChoicesLiteral = JsonSerializer.Serialize(
        vendorChoices.Select(v => new { id = v.Id, name = v.Name })
    );

    var procurementItemsLiteral = JsonSerializer.Serialize(
        procurementItems.Select(i => new { procOfferId = i.ProcOfferId, itemPenawaran = i.ItemPenawaran })
    );

    var existingVendorsLiteral = JsonSerializer.Serialize(
        vendors.Select(v => new
        {
            vendorId = v.VendorId,
            items = (v.Items ?? new List<VendorOfferPerItemInputVm>())
                .Select(it => new
                {
                    procOfferId = it.ProcOfferId,
                    prices = (it.Prices ?? new List<decimal>()),
                    letters = (it.Letters ?? new List<string>()),
                })
        })
    );
}

<form asp-action="EditProfitLoss" method="post" id="pl-form">
