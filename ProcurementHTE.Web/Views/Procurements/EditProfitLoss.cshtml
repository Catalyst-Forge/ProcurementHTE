                                                    type="number"
                                                    inputmode="numeric"
                                                    autocomplete="off"
                                                    value="@items[i].Quantity.ToString(CultureInfo.InvariantCulture)" />
                                        </td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">Rp</span>
                                                <input class="form-control text-end"
                                                       name="Items[@i].TarifAwal"
                                                       data-tarif-awal
                                                       data-format-currency
                                                       type="text"
                                                       inputmode="numeric"
                                                       autocomplete="off"
                                                       value="@items[i].TarifAwal.ToString(CultureInfo.InvariantCulture)" />
                                            </div>
                                        </td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">Rp</span>
                                                <input class="form-control text-end"
                                                       name="Items[@i].TarifAdd"
                                                       data-tarif-add
                                                       data-format-currency
                                                       type="text"
                                                       inputmode="numeric"
                                                       autocomplete="off"
