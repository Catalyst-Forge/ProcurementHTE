@using Microsoft.AspNetCore.Authorization
@using ProcurementHTE.Core.Models
@using ProcurementHTE.Core.Authorization
@using ProcurementHTE.Web.Models.ViewModels
@inject IAuthorizationService AuthZ
@model WorkOrder
@{
    ViewData["Title"] = "Work Order Details";
    var no = 1;
    var canEdit = await AuthZ.AuthorizeAsync(User, Permissions.WO.Edit);
    var canDelete = await AuthZ.AuthorizeAsync(User, Permissions.WO.Delete);
    var pnl = ViewBag.PnlViewModel as ProfitLossSummaryViewModel;
    var documents = ViewBag.Documents as IReadOnlyList<WoDocuments>;
    Func<string, string> BadgeClass = s => (s ?? "").ToLower() switch {
        "draft" => "bg-secondary-subtle text-secondary-emphasis border border-secondary-subtle",
        "created" => "bg-info-subtle text-info-emphasis border border-info-subtle",
        "completed" => "bg-success-subtle text-success-emphasis border border-success-subtle",
        "closed" => "bg-warning-subtle text-warning-emphasis border border-warning-subtle",
        _ => "bg-light text-body border"
    };  
    var selectedNames = pnl?.SelectedVendorNames ?? new List<string>();
}

<header class="mb-3">
    <div class="hstack flex-wrap justify-content-between mb-2">
        <h1 class="h2">@ViewBag.Title</h1>

        <button class="btn btn-primary d-md-none position-fixed bottom-0 end-0 mb-4 mb-md-0 me-4 me-md-0 z-3" type="button" id="buttonNavToggle">
            <i class="bi bi-three-dots-vertical"></i>
        </button>

        <div class="d-flex gap-2 flex-column flex-md-row bg-body p-3 p-md-0 mb-2 border rounded shadow group-nav-button" id="groupNavButton" role="group" aria-label="Button Action">
            <a asp-controller="WorkOrderDocuments" asp-action="Index" asp-route-id="@Model?.WorkOrderId" class="btn btn-outline-primary" role="button"><i class="bi bi-file-earmark-post"></i> Document</a>
            <span title="@(pnl != null ? "data pnl sudah ada" : "")">
                <a asp-action="CreateProfitLoss" asp-route-workOrderId="@Model?.WorkOrderId" class="btn btn-outline-@(pnl != null ? "secondary disabled" : "primary")" role="button" aria-disabled="true"><i class="bi bi-file-earmark-text-fill"></i> Create Profit & Loss</a>
            </span>
            <a asp-action="Edit" asp-route-id="@Model?.WorkOrderId" class="btn btn-outline-warning" role="button"><i class="bi bi-pencil-square"></i> Edit</a>
            <a asp-action="Delete" asp-route-id="@Model?.WorkOrderId" class="btn btn-outline-danger" role="button"><i class="bi bi-trash-fill"></i> Delete</a>
            <a asp-action="Index" class="btn btn-outline-secondary" role="button"><i class="bi bi-arrow-left"></i> Back to List</a>
        </div>
    </div>

    @* Navigation tabs *@
    <nav>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="wo-tab" data-bs-toggle="tab"
                        data-bs-target="#wo-tab-pane" type="button" role="tab"
                        aria-controls="wo-tab-pane" aria-selected="true">
                    Work order information
                </button>
            </li>

            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pnl-tab" data-bs-toggle="tab" data-bs-target="#pnl-tab-pane" type="button" role="tab" aria-controls="pnl-tab-pane" aria-selected="false">Profit and Loss</button>
            </li>

            <li class="nav-item" role="presentation">
                <button class="nav-link" id="document-tab" data-bs-toggle="tab" data-bs-target="#document-tab-pane" type="button" role="tab" aria-controls="document-tab-pane" aria-selected="false">Documents</button>
            </li>
        </ul>
    </nav>
</header>

@* Content body *@
<div class="tab-content" id="myTabContent">
    <!-- ================= WORK ORDER DETAIL ================= -->
    <section class="tab-pane show active" id="wo-tab-pane" role="tabpanel" aria-labelledby="wo-tab" tabindex="0">
        <div class="d-grid gap-md-3 mt-2 wo-content">
            <div>
                @* Work request card *@
                <article class="card shadow-sm mb-3 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-clipboard2-minus-fill text-primary me-1"></i> Job Request</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <div class="row mb-0">
                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.WoNum)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.WoNum)</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.WoNumLetter)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.WoNumLetter)</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.DateLetter)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Model?.DateLetter.ToTanggalIndonesia()</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.From)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.From)</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.To)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.To)</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.WBS)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@(Model?.WBS ?? "-")</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.GlAccount)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@(Model?.GlAccount ?? "-")</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.DateRequired)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Model?.DateRequired.ToTanggalIndonesia()</dd>
                            </dl>

                        </div>
                    </div>
                </article>

                @* Item penawaran card*@
                <article class="card shadow-sm mb-3 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-box2-fill text-primary me-1"></i> Item Penawaran</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <div class="table-responsive rounded-3">
                            <table class="table table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <th class="mw-100 text-nowrap text-uppercase">No</th>
                                        <th class="mw-100 text-nowrap text-uppercase">Item Name</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model!.WoOffers) {
                                        <tr>
                                            <td class="text-nowrap">@no</td>
                                            <td>@item.ItemPenawaran</td>
                                        </tr>
                                        no++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </article>

                @* Item details card *@
                <article class="card shadow-sm mb-3 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-box2-fill text-primary me-1"></i> Item Details</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <div class="table-responsive rounded-3">
                            <table class="table table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <th class="mw-100 text-nowrap text-uppercase">No</th>
                                        <th class="mw-100 text-nowrap text-uppercase">Item Name</th>
                                        <th class="mw-100 text-nowrap text-uppercase">Qty</th>
                                        <th class="mw-100 text-nowrap text-uppercase">Unit</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model?.WoDetails != null && Model.WoDetails.Any()) {
                                        no = 1;
                                        foreach (var detail in Model.WoDetails) {
                                            <tr>
                                                <td class="text-nowrap">@no</td>
                                                <td>@detail.ItemName</td>
                                                <td>@detail.Quantity</td>
                                                <td>@detail.Unit</td>
                                            </tr>
                                            no++;
                                        }
                                    } else {
                                        <tr>
                                            <td colspan="5" class="text-center text-muted">Belum ada rincian barang</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </article>

                @* Item card *@
                <article class="card shadow-sm mb-3 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-file-text-fill text-primary me-1"></i> Job Description</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <div class="row mb-0">
                            <dl class="col-12 mb-3">
                                <dt class="fw-semibold text-uppercase text-secondary mb-2">
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>
                                <dd class="bg-body text-primary-emphasis p-3 lh-base border-start border-primary rounded-3 border-5">
                                    @Html.DisplayFor(model => model.Description)
                                </dd>
                            </dl>

                            <dl class="col-6 mb-3">
                                <dt class="fw-semibold text-uppercase text-secondary mb-2">From</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.XS1)</dd>
                            </dl>

                            <dl class="col-6 mb-3">
                                <dt class="fw-semibold text-uppercase text-secondary mb-2">To</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.XS2)</dd>
                            </dl>

                            <dl class="col-12 mb-3">
                                <dt class="fw-semibold text-uppercase text-secondary mb-2">@Html.DisplayNameFor(model => model.Note)</dt>
                                <dd class="bg-info-subtle text-info-emphasis p-3 lh-base border-start border-info rounded-3 border-5">@Html.DisplayFor(model => model.Note)</dd>
                            </dl>
                        </div>
                    </div>
                </article>
            </div>

            <div>
                @* Work order information card *@
                <article class="card shadow-sm mb-3 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-info-circle-fill text-primary me-1"></i> Information Work Order</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <div class="row mb-0">
                            <dl class="col-6 col-lg-12 col-xl-6">
                                <dt class="fw-semibold text-uppercase text-secondary mb-1">
                                    @Html.DisplayNameFor(model => model.WoType)
                                </dt>
                                <dd>
                                    <span class="badge bg-info rounded-5 p-2 px-3">
                                        @Html.DisplayFor(model => model.WoType!.TypeName)
                                    </span>
                                </dd>
                            </dl>

                            <dl class="col-6 col-lg-12 col-xl-6">
                                <dt class="fw-semibold text-uppercase text-secondary mb-1">
                                    @Html.DisplayNameFor(model => model.Status)
                                </dt>
                                <dd>
                                    <span class="badge bg-secondary rounded-5 p-2 px-3">
                                        @Html.DisplayFor(model => model.Status!.StatusName)
                                    </span>
                                </dd>
                            </dl>

                            <dl class="col-6 col-lg-12 col-xl-6">
                                <dt class="fw-semibold text-uppercase text-secondary mb-1">
                                    @Html.DisplayNameFor(model => model.CreatedAt)
                                </dt>
                                <dd class="fw-medium text-secondary-emphasis">
                                    @Model?.CreatedAt.ToTanggalIndonesia()
                                </dd>
                            </dl>

                            <dl class="col-6 col-lg-12 col-xl-6">
                                <dt class="fw-semibold text-uppercase text-secondary mb-1">
                                    @Html.DisplayNameFor(model => model.User)
                                </dt>
                                <dd class="fw-medium text-secondary-emphasis">
                                    @Html.DisplayFor(model => model.User!.FullName)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </article>

                @* Contact person card *@
                <article class="card shadow-sm mb-3 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-person-fill text-primary me-1"></i> Contact Person</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <dl class="text-bg-light p-3 rounded-4 mb-2">
                            <dt class="fw-semibold mb-2"><i class="bi bi-geo-alt-fill"></i> Lokasi</dt>
                            <dd class="text-secondary-emphasis">CP Lokasi @Model?.XS1 : <br /> @Html.DisplayFor(model => model.XS3)</dd>
                        </dl>

                        <dl class="text-bg-light p-3 rounded-4 mb-2">
                            <dt class="fw-semibold mb-2"><i class="bi bi-tools"></i> Workshop</dt>
                            <dd class="text-secondary-emphasis">CP Workshop @Model?.XS2 : <br /> @Html.DisplayFor(model => model.XS4)</dd>
                        </dl>
                    </div>
                </article>

                @* Approvals card *@
                <article class="card shadow-sm mb-3 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-check-circle-fill text-primary me-1"></i> Approvals</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <dl class="text-bg-light p-3 rounded-4 mb-2">
                            <dt class="fw-semibold text-secondary mb-2">Coring Coordinator</dt>
                            <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.Requester)</dd>
                        </dl>

                        <dl class="text-bg-light p-3 rounded-4 mb-2">
                            <dt class="fw-semibold text-secondary mb-2">Pjs. Subsurface Services Mgr</dt>
                            <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.Approved)</dd>
                        </dl>
                    </div>
                </article>
            </div>
        </div>
    </section>

    <!-- ================= PROFIT & LOSS DETAIL ================= -->
    <section class="tab-pane" id="pnl-tab-pane" role="tabpanel" aria-labelledby="pnl-tab" tabindex="0">
        @if (pnl == null) {
            <div class="alert alert-warning d-flex align-items-center mt-3" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                Belum ada data Profit &amp; Loss untuk WO ini.
            </div>

            <a asp-action="CreateProfitLoss" asp-route-workOrderId="@Model!.WorkOrderId" class="btn btn-success">
                <i class="bi bi-file-earmark-plus"></i> Buat Profit &amp; Loss
            </a>
        } else {
            var items = pnl.Items;

            @* VENDOR YANG DISERTAKAN *@
            <article class="card shadow-sm mb-3 rounded-4">
                <header class="card-header fw-semibold bg-transparent border-bottom-0 mt-2">
                    <h2 class="card-title mb-0 h5">
                        <i class="bi bi-building-fill text-primary me-1"></i>
                        Vendor yang diikutkan
                    </h2>
                </header>
                <hr class="mx-3 my-2" />

                <div class="card-body">
                    @if (selectedNames.Any()) {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var name in selectedNames) {
                                <span class="badge border rounded-5 text-secondary fw-medium px-3 py-2">@name</span>
                            }
                        </div>
                    } else {
                        <span class="text-muted">—</span>
                    }
                </div>
            </article>

            @* RINGKASAN PNL *@
            <article class="card shadow-sm mb-3 rounded-4">
                <header class="card-header fw-semibold bg-transparent border-bottom-0 mt-2">
                    <h2 class="card-title mb-0 h5">
                        <i class="bi bi-bar-chart text-primary me-1"></i>
                        Ringkasan Profit &amp; Loss
                    </h2>
                </header>
                <hr class="mx-3 my-2" />

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="card-title mb-0 h6">Ringkasan</h3>
                        <a asp-action="EditProfitLoss" asp-route-id="@pnl.ProfitLossId" class="btn btn-outline-primary">
                            Hitung Ulang
                        </a>
                    </div>

                    <div class="row g-3">
                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="fw-semibold">Tarif 400 km (Σ)</div>
                            <div>@((pnl.Items?.Sum(x => x.TarifAwal) ?? 0m).ToIDR())</div>
                        </div>

                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="fw-semibold">Tarif Add (Σ)</div>
                            <div>@((pnl.Items?.Sum(x => x.TarifAdd) ?? 0m).ToIDR())</div>
                        </div>

                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="fw-semibold">Cost Operator</div>
                            <div>@((pnl.Items?.Sum(x => x.OperatorCost) ?? 0m).ToIDR())</div>
                            <div class="small text-muted">= Σ(Tarif Add × KM/25 per item)</div>
                        </div>

                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="fw-semibold">Total Revenue</div>
                            <div class="fw-bold">@((pnl.Items?.Sum(x => x.Revenue) ?? 0m).ToIDR())</div>
                        </div>

                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="fw-semibold">Best Vendor</div>
                            <div class="text-success fw-semibold">@pnl.SelectedVendorName</div>
                        </div>

                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="fw-semibold">Final Offer</div>
                            <div>@pnl.SelectedFinalOffer.ToIDR()</div>
                            <div class="small text-muted">(Σ harga round terakhir tiap item)</div>
                        </div>

                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="fw-semibold">Profit</div>
                            <div class="fw-bold text-success">
                                @pnl.Profit.ToIDR() (@pnl.ProfitPercent.ToPersen())
                            </div>
                            <div class="small text-muted">= Revenue − Final Offer</div>
                        </div>
                    </div>
                </div>
            </article>

            @* RINCIAN ITEM (PER-WOOFFER) *@
            <article class="card shadow-sm mb-3 rounded-4">
                <header class="card-header fw-semibold bg-transparent border-bottom-0 mt-2">
                    <h2 class="card-title mb-0 h5">
                        <i class="bi bi-list-ul text-primary me-1"></i>
                        Rincian Item (Revenue Builder)
                    </h2>
                </header>
                <hr class="mx-3 my-2" />

                <div class="card-body">
                    <div class="table-responsive rounded-3">
                        <table class="table align-middle mb-0">
                            <thead class="table-info">
                                <tr>
                                    <th>Item</th>
                                    <th class="text-end">Tarif 400 km</th>
                                    <th class="text-end">Tarif Add</th>
                                    <th class="text-end">KM/25</th>
                                    <th class="text-end">Operator Cost</th>
                                    <th class="text-end">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var it in items) {
                                    <tr>
                                        <td>@it.ItemName</td>
                                        <td class="text-end">@it.TarifAwal.ToIDR()</td>
                                        <td class="text-end">@it.TarifAdd.ToIDR()</td>
                                        <td class="text-end">@it.KmPer25</td>
                                        <td class="text-end">@it.OperatorCost.ToIDR()</td>
                                        <td class="text-end fw-semibold">@it.Revenue.ToIDR()</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <th class="text-end" colspan="5">Total</th>
                                    <th class="text-end fw-bold">@items.Sum(x => x.Revenue).ToIDR()</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <div class="small text-muted px-3 pb-2">
                    Operator Cost per item = <em>Tarif Add × KM/25</em>, Revenue per item = <em>Tarif 400 km + Operator Cost</em>.
                </div>
            </article>


            @* PERBANDINGAN VENDOR *@
            <article class="card shadow-sm mb-3 rounded-4">
                <header class="card-header fw-semibold bg-transparent border-bottom-0 mt-2">
                    <h2 class="card-title mb-0 h5">
                        <i class="bi bi-award text-primary me-1"></i>
                        Perbandingan Vendor
                    </h2>
                </header>
                <hr class="mx-3 my-2" />
                <div class="card-body">
                    <div class="table-responsive rounded-3">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Vendor</th>
                                    <th class="text-end">Final Offer</th>
                                    <th class="text-end">Profit</th>
                                    <th class="text-end">Profit %</th>
                                    <th class="text-center">Result</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var row in pnl.Rows) {
                                    <tr class="@(row.IsSelected ? "table-success" : "")">
                                        <td>@row.VendorName</td>
                                        <td class="text-end">@row.FinalOffer.ToIDR()</td>
                                        <td class="text-end">@row.Profit.ToIDR()</td>
                                        <td class="text-end">@row.ProfitPercent.ToPersen()</td>
                                        <td class="text-center">
                                            @if (row.IsSelected) {
                                                <span class="badge text-bg-success">Terpilih</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="small text-muted px-3 pb-2">
                    Best offer dipilih otomatis dari vendor dengan harga total paling rendah (Σ harga round terakhir setiap item).
                </div>
            </article>
        }
    </section>

    <!-- ================= WORK ORDER DOCUMENTS ================= -->
    <section class="tab-pane" id="document-tab-pane" role="tabpanel" aria-labelledby="document-tab" tabindex="0">
        <div class="mb-3">
            @* Work Order Documents card *@
            <header class="mt-2 fw-semibold bg-transparent border-bottom-0">
                <h2 class="card-title mb-0 h5"><i class="bi bi-folder-fill text-primary me-1"></i> Work Order Documents</h2>
            </header>
            <hr />

            @if (documents != null && documents!.Any()) {
                <div class="list-group shadow-sm rounded-3">
                    @foreach (var doc in documents) {
                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div class="d-flex flex-column flex-sm-row align-items-sm-center">
                                <i class="bi bi-file-earmark-pdf text-danger fs-5 me-3"></i>
                                <div>
                                    <div class="fw-semibold">@doc.FileName</div>
                                    <small class="text-muted">@doc.Description</small>
                                </div>
                            </div>

                            <div class="text-end">
                                <small class="small text-muted d-block mb-1">@doc.CreatedAt.ToLongDateString()</small>
                                <div class="d-flex flex-column flex-sm-row gap-1 align-items-end">
                                    <button type="button"
                                            class="btn btn-sm btn-outline-secondary btn-preview"
                                            data-doc-id="@doc.WoDocumentId"
                                            data-doc-name="@(doc.FileName)"
                                            data-file-name="@(doc.FileName)">
                                        <i class="bi bi-eye"></i> Preview
                                    </button>

                                    <a asp-controller="WorkOrderDocuments" asp-action="Download" asp-route-id="@doc.WoDocumentId" class="btn btn-outline-primary btn-sm btn-download" role="button" data-doc-id="@doc.WoDocumentId">
                                        <i class="bi bi-download"></i> Download
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            } else {
                <div class="alert alert-info mb-0">No documents available for this work order.</div>
            }
        </div>
    </section>
</div>

@* PDF Preview Modal *@
<div class="modal fade" id="pdfPreviewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <div>
                    <h5 class="modal-title" id="previewModalTitle">Preview Dokumen</h5>
                    <small class="text-muted" id="previewFileName"></small>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div id="pdfLoadingContainer" class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 text-muted">Memuat dokumen...</p>
                </div>
                <div id="pdfErrorContainer" class="text-center py-5 d-none">
                    <i class="bi bi-exclamation-triangle-fill text-danger fs-1 mb-3"></i>
                    <p class="text-muted">Gagal memuat dokumen. Silakan coba lagi.</p>
                </div>
                <iframe id="pdfPreviewFrame"
                        style="width: 100%; height: 75vh; border: none; display: none;"
                        title="PDF Preview">
                </iframe>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                <button type="button" class="btn btn-primary" id="downloadFromPreview">
                    <i class="bi bi-download"></i> Download
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentDownloadDocId = null;
        let currentPreviewUrl = null;

        function initPreviewHandlers() {
            document.querySelectorAll(".btn-preview").forEach(btn => {
                btn.addEventListener('click', async function () {
                    const docId = this.dataset.docId;
                    const docName = this.dataset.docName;
                    const fileName = this.dataset.fileName;

                    currentDownloadDocId = docId;

                    const titleElement = document.getElementById("previewModalTitle");
                    const fileNameElement = document.getElementById("previewFileName");
                    const loadingContainer = document.getElementById("pdfLoadingContainer");
                    const errorContainer = document.getElementById("pdfErrorContainer");
                    const previewFrame = document.getElementById("pdfPreviewFrame");

                    if (titleElement) titleElement.textContent = `Preview Dokumen: ${docName}` || "Preview Dokumen";
                    if (fileNameElement) fileNameElement.textContent = fileName || "";

                    const modalElement = document.getElementById("pdfPreviewModal");
                    const modal = new bootstrap.Modal(modalElement);
                    modal.show();

                    previewFrame.style.display = "none";
                    previewFrame.src = "";
                    loadingContainer.classList.remove("d-none");
                    errorContainer.classList.add("d-none");

                    try {
                        const response = await fetch(`/WorkOrderDocuments/PreviewUrl/${docId}?workOrderId=@Model?.WorkOrderId`);
                        const data = await response.json();

                        if (data.ok && data.url) {
                            currentPreviewUrl = data.url;
                            previewFrame.src = data.url;

                            previewFrame.onload = () => {
                                loadingContainer.classList.add("d-none");
                                previewFrame.style.display = "block";
                            };

                            previewFrame.onerror = () => {
                                loadingContainer.classList.add("d-none");
                                errorContainer.classList.remove("d-none");
                            };
                        } else {
                            throw new Error("Failed to get preview URL" ||data.error);
                        }
                    } catch (error) {
                        console.error("Error fetching preview URL:", error);
                        loadingContainer.classList.add("d-none");
                        errorContainer.classList.remove("d-none");
                    }
                })
            })

            document.getElementById("downloadFromPreview").addEventListener('click', () => {
                if (!currentDownloadDocId) return;

                const btn = document.querySelector(`.btn-download[data-doc-id='${currentDownloadDocId}']`);
                btn.click();
            });
        }

        const toggleButtonGroup = document.getElementById("buttonNavToggle");
        const buttonGroupWrap = document.getElementById("groupNavButton");

        toggleButtonGroup.addEventListener("click", () => {
        buttonGroupWrap.classList.toggle("show");
        });

        document.addEventListener("DOMContentLoaded", function () {
            var triggerEl = document.querySelector('#wo-tab')
            var tab = new bootstrap.Tab(triggerEl)
            tab.show()

            initPreviewHandlers();
        });
    </script>
}
