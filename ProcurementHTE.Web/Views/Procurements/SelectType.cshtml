@model IEnumerable<ProcurementHTE.Core.Models.WoTypes>
@{
    ViewData["Title"] = "Select Work Order Type";
}


<header class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Select Work Order Type</h1>
    <a asp-action="Index" class="btn btn-outline-secondary" role="button"><i class="bi bi-arrow-left"></i> Back to List</a>
</header>
@if (!Model.Any())
{
    <div class="alert alert-warning">Belum ada tipe Work Order yang tersedia.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var type in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 hover-shadow transition"
                     style="cursor:pointer;"
                     onclick="selectType('@type.WoTypeId')">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title text-primary fw-semibold">@type.TypeName</h5>
                            @if (!string.IsNullOrWhiteSpace(type.Description))
                            {
                                <p class="card-text text-muted small">@type.Description</p>
                            }
                            else
                            {
                                <p class="card-text text-muted small">Tidak ada deskripsi.</p>
                            }
                        </div>
                        <div class="mt-3">
                            <button type="button"
                                    class="btn btn-outline-primary w-100">
                                Pilih
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <form id="selectTypeForm" asp-action="SelectType" method="post" class="d-none">
        <input type="hidden" name="woTypeId" id="woTypeId" />
        @Html.AntiForgeryToken()
    </form>
}

@section Scripts {
<script>
    function selectType(id) {
        document.getElementById('woTypeId').value = id;
        document.getElementById('selectTypeForm').submit();
    }
</script>
}
