                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3" data-itemhost></div>
                </div>
            `;

            vendorsContainer.appendChild(card);
            card.dataset.vendorId = vendorId;
            card.dataset.vendorIndex = idx;
            const select = card.querySelector('select');

            refreshCardVendorOptions(card);
            select.value = vendorId;
            select.addEventListener('change', () => {
                card.dataset.vendorId = select.value;
                updateVendorBlocks();
            });

            card.querySelector('[data-add-item]').addEventListener('click', () => {
                addItemToVendor(card);
            });

            card.querySelector('[data-del]').addEventListener('click', () => {
                card.remove();
                updateVendorBlocks();
            });
            updateVendorBlocks();
        }

        document.getElementById('btnAddVendor').addEventListener('click', addVendor);

        // ===== Summary (Σ last round / item) =====
        function recalcSummary() {
            const revenueField = getEl('#revenue');
            const revenue = revenueField?.dataset?.rawValue
                ? parseFloat(revenueField.dataset.rawValue) || 0
                : parseFloat(digitsOnly(revenueField?.value)) || 0;
            const tbody = document.querySelector('#summary tbody');
            tbody.innerHTML = '';

            document.querySelectorAll('#vendors .card[data-vendor-id]').forEach(card => {
                const sel = card.querySelector('select');
                const vendorName = getVendorName(sel);

                let vendorTotal = 0;
                let complete = true;
                card.querySelectorAll('[data-item-block]').forEach(block => {
                    if (!complete) return;

                    const inputs = block.querySelectorAll('[data-price]');
                    if (!inputs.length) {
                        complete = false;
                        return;
                    }

                    // ⬇️ NEW: pakai harga TERENDAH dari semua ronde di item ini
                    let best = Infinity;
                    inputs.forEach(inp => {
                        const rawVal = inp.dataset?.rawValue;
                        const val = rawVal && rawVal.length
                            ? parseFloat(rawVal)
                            : parseFloat(digitsOnly(inp.value)) || 0;

                        if (val > 0 && val < best) {
                            best = val;
                        }
                    });

                    // kalau belum ada harga valid > 0, anggap belum lengkap
                    if (!(best > 0 && isFinite(best))) {
                        complete = false;
                        return;
                    }

                    vendorTotal += best;
                });


                if (!complete || vendorTotal <= 0) return;

                const profit = revenue - vendorTotal;
                const pct = revenue ? (profit / revenue) * 100 : 0;
                const tr = document.createElement('tr');
                tr.dataset.totalRaw = vendorTotal.toString();
                tr.innerHTML = `
                    <td>${vendorName}</td>
                    <td class="text-end">${fmtClean(vendorTotal)}</td>
                    <td class="text-end">${fmtClean(profit)}</td>
                    <td class="text-end">${pct.toFixed(2)}%</td>`;
                tbody.appendChild(tr);
            });

            const rows = [...tbody.querySelectorAll('tr')];
            if (rows.length){
                rows.forEach(row => row.classList.remove('table-success'));
                const best = rows.reduce((bestRow, current) => {
                    const bestVal = parseInt(bestRow.dataset.totalRaw || '0', 10) || 0;
                    const currentVal = parseInt(current.dataset.totalRaw || '0', 10) || 0;
                    return currentVal < bestVal ? current : bestRow;
                }, rows[0]);
                best.classList.add('table-success');
            }
        }

        // init
        (function init(){
            bindCurrencyInputs(document);
            document.querySelectorAll(currencySelector).forEach(input => updateCurrencyInput(input));
            recalcHeader();
            updateVendorBlocks();

            const distanceInput = document.querySelector('input[name="Distance"]');
            if (distanceInput) {
                distanceInput.addEventListener('input', () => {
                    recalcHeader();
                });
            }

            const form = document.getElementById('pl-form');
            if (form) {
                form.addEventListener('submit', () => {
                    document.querySelectorAll(currencySelector).forEach(input => {
                        input.value = input.dataset?.rawValue ?? digitsOnly(input.value);
                    });
                });
            }
        })();

    </script>

    <!-- ✅ Override jQuery validate "number" khusus untuk input currency (Accrual & Realization) -->
    <script>
        $(function () {
            if (!$.validator || !$.validator.methods || !$.validator.methods.number) {
                return;
            }

            const originalNumberMethod = $.validator.methods.number;

            $.validator.methods.number = function (value, element) {
                // Hanya adjust untuk input yang pakai data-format-currency
                if ($(element).is('[data-format-currency]')) {
                    const normalized = value
                        .replace(/\./g, '')   // "1.000.000" -> "1000000"
                        .replace(',', '.');   // koma jadi titik kalau ada

                    if (normalized.trim() === '') {
                        return this.optional(element);
                    }

                    return originalNumberMethod.call(this, normalized, element);
                }

                // Field lain: pakai aturan default
                return originalNumberMethod.call(this, value, element);
            };
        });
    </script>
