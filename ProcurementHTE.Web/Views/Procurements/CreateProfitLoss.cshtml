@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Globalization
@using System.Collections.Generic
@using System.Linq
@model ProcurementHTE.Web.Models.ViewModels.ProfitLossInputViewModel
@{
    var isEdit = Model is ProcurementHTE.Web.Models.ViewModels.ProfitLossEditViewModel;
    var editModel = isEdit ? (ProcurementHTE.Web.Models.ViewModels.ProfitLossEditViewModel)Model : null;
    var pageTitle = isEdit ? "Edit Profit & Loss" : "Create Profit & Loss";
    var submitLabel = isEdit ? "Update Profit & Loss" : "Save & Calculate";
    ViewData["Title"] = pageTitle;
    var selectedVendorSet = new HashSet<string>(
        Model.SelectedVendorIds ?? new List<string>(),
        StringComparer.OrdinalIgnoreCase
    );
}

<form asp-action="@(isEdit ? "EditProfitLoss" : "CreateProfitLossPost")"
      asp-controller="Procurements"
      method="post"
      id="pl-form">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProcurementId" />
    @if (isEdit && editModel != null)
    {
        <input type="hidden" name="ProfitLossId" value="@editModel.ProfitLossId" />
    }

    <header class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">@pageTitle</h1>
            <p class="text-muted small mb-0">
                Procurement: <strong>@ViewBag.ProcNum</strong> &middot; Issued: @ViewBag.IssueDate
            </p>
        </div>

        <nav class="d-flex gap-2" aria-label="Page navigation">
            <a asp-action="Details" asp-route-id="@Model.ProcurementId" class="btn btn-outline-secondary" role="button">
                <i class="bi bi-arrow-left"></i> Back to Procurement
            </a>
        </nav>
    </header>

    @if (TempData["WarningMessage"] != null) {
        <div class="alert alert-warning small">@TempData["WarningMessage"]</div>
    }

    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

    <div class="row g-3">
        <!-- ================= VENDOR LIST ================= -->
        <section class="col-12" aria-labelledby="vendor-section-title">
            <div class="card shadow-sm p-2">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="vendor-section-title">Select Participating Vendors</legend>
                    <hr />
                    <div class="row row-cols-2 row-cols-md-3 g-3">
                        @foreach (var vendor in Model.VendorChoices) {
                            <div class="col mb-2">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="SelectedVendorIds"
                                           value="@vendor.Id"
                                           id="vendor_@vendor.Id" @(selectedVendorSet.Contains(vendor.Id) ? "checked" : null) />
                                    <label class="form-check-label" for="vendor_@vendor.Id">
                                        @vendor.Name
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                    <span asp-validation-for="SelectedVendorIds" class="text-danger"></span>
                </fieldset>
            </div>
        </section>

        <!-- ================= FINANCIAL SUMMARY ================= -->
        <section class="col-12" aria-labelledby="financial-section-title">
            <div class="card shadow-sm p-2">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="financial-section-title">Financial Figures</legend>
                    <hr />
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="AccrualAmount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="AccrualAmount" class="form-control text-end" data-format-currency inputmode="numeric" />
                            </div>
                            @* <span class="text-danger" asp-validation-for="AccrualAmount"></span> *@
                        </div>
                        <div class="col-md-4">
                            <label asp-for="RealizationAmount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="RealizationAmount" class="form-control text-end" data-format-currency inputmode="numeric" />
                            </div>
                            @* <span class="text-danger" asp-validation-for="RealizationAmount"></span> *@
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Distance" class="form-label"></label>
                            <input asp-for="Distance" asp-format="{0:0}" class="form-control text-end" inputmode="numeric" />
                            <span class="text-danger" asp-validation-for="Distance"></span>
                        </div>
                    </div>
                </fieldset>
            </div>
        </section>

        <!-- ================= BILLING TO PDC (PER-ITEM) ================= -->
        <section class="col-12" aria-labelledby="pdc-section-title">
            <div class="card shadow-sm">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="pdc-section-title">Billing to PDC (Revenue Builder per Item)</legend>
                    <hr />
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="min-width:220px">Offer Item</th>
                                    <th class="text-end" style="width:180px">Quantity</th>
                                    <th class="text-end" style="width:180px">400 km Rate</th>
                                    <th class="text-end" style="width:160px">Additional Rate</th>
                                    <th class="text-end" style="width:140px">KM/25</th>
                                    <th class="text-end" style="width:180px">Operator Cost</th>
                                    <th class="text-end" style="width:180px">Revenue</th>
                                </tr>
                            </thead>
                            <tbody id="pdcItems">
                                @for (var i = 0; i < Model.Items.Count; i++) {
                                    var procOfferId = Model.Items[i].ProcOfferId;
                                    var itemName = Model.OfferItems.FirstOrDefault(x => x.ProcOfferId == procOfferId)?.ItemPenawaran;
                                    var quantityItem = Model.OfferItems.FirstOrDefault(item => item.ProcOfferId == procOfferId)?.Quantity;

                                    <tr data-item-row data-proc-offer-id="@procOfferId">
                                        <input type="hidden" name="Items.Index" value="@i" />
                                        <input type="hidden" name="Items[@i].ProcOfferId" value="@procOfferId" />

                                        <td class="fw-semibold">@itemName</td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                @if (isEdit && editModel != null) {
                                                    <input class="form-control text-end"
                                                           asp-for="Items[@i].Quantity"
                                                           data-quantity />
                                                } else {
                                                    <input class="form-control text-end"
                                                           name="Items[@i].Quantity"
                                                           data-quantity
                                                           value="@quantityItem" />
                                                }
                                            </div>
                                            <span class="text-danger small field-validation-valid" asp-validation-for="Items[@i].Quantity"></span>
                                        </td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">Rp</span>
                                                <input class="form-control text-end"
                                                       asp-for="Items[@i].TarifAwal"
                                                       data-tarif-awal
                                                       data-format-currency 
                                                       autocomplete="off"
                                                       inputmode="numeric" />
                                                @* <span class="text-danger" asp-validation-for="Items[@i].TarifAwal"></span> *@
                                            </div>
                                        </td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">Rp</span>
                                                <input class="form-control text-end"
                                                       asp-for="Items[@i].TarifAdd"
                                                       data-tarif-add
                                                       data-format-currency
                                                       autocomplete="off"
                                                       inputmode="numeric" />
                                                @* <span class="text-danger" asp-validation-for="Items[@i].TarifAdd"></span> *@
                                            </div>
                                        </td>

                                        <td class="text-end">
                                            <input class="form-control form-control-sm text-end"
                                                   asp-for="Items[@i].KmPer25"
                                                   data-km 
                                                   readonly />
                                        </td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">Rp</span>
                                                <input class="form-control form-control-sm text-end" data-operator readonly />
                                            </div>
                                        </td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">Rp</span>
                                                <input class="form-control form-control-sm text-end fw-semibold" data-rev readonly />
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="6" class="text-end">TOTAL</th>
                                    @* <th class="text-end">
                                        <input id="operatorCost" class="form-control form-control-sm text-end" readonly />
                                    </th> *@
                                    <th class="text-end">
                                        <input id="revenue" class="form-control form-control-sm text-end fw-bold" readonly />
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <small class="text-muted">KM/25 = (Distance - 400) × 25 <br /> Operator cost per item = <em>Additional Rate × KM/25</em><br /> Revenue per item = <em>400 km Rate + Operator Cost</em></small>
                </fieldset>
            </div>
        </section>

        <!-- ================= PENAWARAN VENDOR ================= -->
        <section class="col-12" aria-labelledby="offer-section-title">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h3 class="card-title fw-semibold mb-0 h4" id="offer-section-title">Vendor Offers</h3>
                        <button type="button" class="btn btn-outline-primary btn-sm" id="btnAddVendor">
                            <i class="bi bi-person-plus"></i> Add Vendor
                        </button>
                    </div>
                    <hr />
                    <div id="vendors" class="vstack gap-3 overflow-auto pe-2"></div>
                </div>
            </div>
        </section>

        <!-- ================= ESTIMASI PERHITUNGAN PROFIT ================= -->
        <section class="col-12" aria-labelledby="summary-section-title">
            <div class="card shadow-sm">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="summary-section-title">Interim Summary</legend>
                    <hr />
                    <div class="table-responsive border rounded-3">
                        <table class="table align-middle mobile-table" id="summary">
                            <thead class="table-light">
                                <tr>
                                    <th>Vendor</th>
                                    <th class="text-end">Final Offer (Σ last / item)</th>
                                    <th class="text-end">Profit</th>
                                    <th class="text-end">Profit %</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </fieldset>
            </div>
        </section>

        <!-- ================= ACTION ================= -->
        <div class="col-12 d-flex justify-content-end gap-2 mb-3">
            <button type="submit" class="btn btn-primary">@submitLabel</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        var vendorChoicesJson = System.Text.Json.JsonSerializer.Serialize(
            (Model.VendorChoices ?? System.Linq.Enumerable.Empty<ProcurementHTE.Web.Models.ViewModels.VendorChoiceViewModel>())
                .Select(v => new { id = v.Id, name = v.Name })
        );
        var vendorChoicesJsonLiteral = System.Text.Json.JsonSerializer.Serialize(vendorChoicesJson);

        var procItemsJson = System.Text.Json.JsonSerializer.Serialize(
            (Model.OfferItems ?? new System.Collections.Generic.List<ProcurementHTE.Web.Models.ViewModels.ProcOfferLiteVm>())
                .Select(i => new { procOfferId = i.ProcOfferId, itemPenawaran = i.ItemPenawaran })
        );
        var procItemsJsonLiteral = System.Text.Json.JsonSerializer.Serialize(procItemsJson);

        var vendorPresetJson = System.Text.Json.JsonSerializer.Serialize(
            (Model.Vendors ?? new List<ProcurementHTE.Web.Models.ViewModels.VendorItemOfferInputVm>())
                .Where(v => !string.IsNullOrWhiteSpace(v.VendorId))
                .Select(v => new
                {
                    vendorId = v.VendorId,
                    items = (v.Items ?? new List<ProcurementHTE.Web.Models.ViewModels.VendorOfferPerItemInputVm>())
                        .Select(item => new
                        {
                            procOfferId = item.ProcOfferId,
                            quantity = item.Quantity,
                            trip = item.Trip,
                            prices = item.Prices ?? new List<decimal>(),
                            letters = item.Letters ?? new List<string>()
                        })
                        .ToList()
                })
        );
        var vendorPresetJsonLiteral = System.Text.Json.JsonSerializer.Serialize(vendorPresetJson);

        var modelStateErrorsJson = System.Text.Json.JsonSerializer.Serialize(
            ViewData.ModelState
                .Where(kvp => kvp.Value?.Errors?.Count > 0)
                .ToDictionary(
                    kvp => kvp.Key,
                    kvp => kvp.Value!.Errors.Select(e => e.ErrorMessage).FirstOrDefault() ?? string.Empty
                )
        );
        var modelStateErrorsLiteral = System.Text.Json.JsonSerializer.Serialize(modelStateErrorsJson);
    }

    <script>
        // --- data server ---
        const vendorsAll = JSON.parse(@Html.Raw(vendorChoicesJsonLiteral));
        const procItems = JSON.parse(@Html.Raw(procItemsJsonLiteral));
        const presetVendors = JSON.parse(@Html.Raw(vendorPresetJsonLiteral));
        const modelStateErrors = JSON.parse(@Html.Raw(modelStateErrorsLiteral));

        // helpers
        const fmtClean = n => { 
            const x = Number(n||0); 
            return x % 1 === 0 ? 
                x.toLocaleString('id-ID',{maximumFractionDigits:0}) 
                : 
                x.toLocaleString('id-ID'); };
        const getEl = sel => document.querySelector(sel);
        const getAll = sel => document.querySelectorAll(sel);
        const currencySelector = '[data-format-currency]';
        const thousandGroupRegex = /\B(?=(\d{3})+(?!\d))/g;

        const cleanDecimal = val => {
            const num = parseFloat(val);
            return isNaN(num) ? val : (Number.isInteger(num) ? num.toString() : val);
        };

        const digitsOnly = value => (value ?? '').toString().replace(/\D/g, '');

        function setCurrencyDisplay(input, rawValue) {
            if (!input) return;
            const normalized = digitsOnly(cleanDecimal(rawValue));
            input.dataset.rawValue = normalized;
            input.value = normalized ? normalized.replace(thousandGroupRegex, '.') : '';
        }

        function updateCurrencyInput(input, notify = false) {
            if (!input) return;
            const selectionStart = input.selectionStart ?? input.value.length;
            const digitsBefore = input.value.slice(0, selectionStart).replace(/\D/g, '').length;
            const raw = digitsOnly(input.value);
            setCurrencyDisplay(input, raw);
            if (document.activeElement === input) {
                const formatted = input.value;
                if (!formatted) {
                    input.setSelectionRange(0, 0);
                } else {
                    let cursorPos = formatted.length;
                    if (digitsBefore === 0) {
                        cursorPos = 0;
                    } else {
                        let digitCount = 0;
                        for (let idx = 0; idx < formatted.length; idx++) {
                            if (/\d/.test(formatted[idx])) {
                                digitCount++;
                                if (digitCount >= digitsBefore) {
                                    cursorPos = idx + 1;
                                    break;
                                }
                            }
                        }
                    }
                    input.setSelectionRange(cursorPos, cursorPos);
                }
            }
            if (notify) handleCurrencyChange(input);
        }

        function bindCurrencyInput(input) {
            if (!input || input.dataset.currencyBound === '1') return;
            input.dataset.currencyBound = '1';
            setCurrencyDisplay(input, input.value);
        }

        function bindCurrencyInputs(scope) {
            (scope || document).querySelectorAll(currencySelector).forEach(bindCurrencyInput);
        }

        function handleCurrencyChange(input) {
            if (input.matches('[data-tarif-awal],[data-tarif-add]')) {
                recalcHeader();
            } else if (input.matches('[data-price]')) {
                recalcSummary();
            }
        }

        function numberValue(input) {
            if (!input) return 0;
            const raw = input.dataset?.rawValue;
            if (raw && raw.length) return parseFloat(raw);
            const fallback = digitsOnly(input.value);
            return fallback ? parseFloat(fallback) : 0;
        }

        function getVendorName(selectEl) {
            if (!selectEl) return '';
            if (selectEl.selectedOptions && selectEl.selectedOptions.length > 0) {
                return selectEl.selectedOptions[0].text || '';
            }

            const idx = typeof selectEl.selectedIndex === 'number' ? selectEl.selectedIndex : -1;
            if (idx >= 0 && selectEl.options && selectEl.options.length > idx) {
                return selectEl.options[idx].text || '';
            }
            
            return '';
        }

        // ===== per-item -> total calc =====
        function recalcHeader() {
            let opTotal = 0, revTotal = 0;

            getAll('#pdcItems [data-item-row]').forEach(row => {
                const qty = numberValue(row.querySelector('[data-quantity]'));
                const a = numberValue(row.querySelector('[data-tarif-awal]'));
                const add = numberValue(row.querySelector('[data-tarif-add]'));
                const km = parseFloat(row.querySelector('[data-km]').value || 0);

                const op = add * km;
                const rev = (a + op) * qty;

                row.querySelector('[data-operator]').value = fmtClean(op);
                row.querySelector('[data-rev]').value = fmtClean(rev);

                opTotal += op;
                revTotal += rev;
            });

            const opField = getEl('#operatorCost');
            if (opField) {
                opField.value = fmtClean(opTotal);
                opField.dataset.rawValue = opTotal.toString();
            }

            const revField = getEl('#revenue');
            if (revField) {
                revField.value = fmtClean(revTotal);
                revField.dataset.rawValue = revTotal.toString();
            }

            recalcSummary();
        }

        function recalcKmPer25FromDistance() {
            const distanceInput = document.getElementById("Distance")
            if (!distanceInput) return;

            const raw =(distanceInput.value || '').toString().replace(',', '.');
            const distance = parseFloat(raw);
            if (isNaN(distance)) {
                getAll('[data-km]').forEach(input => {
                    input.value = '';
                });

                recalcHeader();
                return;
            }

            let kmPer25 = (distance - 400) / 25;
            if (!Number.isFinite(kmPer25) || kmPer25 < 0) {
                kmPer25 = 0;
            }

            kmPer25 = Math.round(kmPer25 * 100) / 100;

            getAll('[data-km]').forEach(input => {
                input.value = kmPer25;
            })

            recalcHeader();
        }

        document.addEventListener('input', e => {
            if (e.target.matches(currencySelector)) {
                updateCurrencyInput(e.target, true);
                return;
            }
            if (e.target.matches('[data-km]')) {
                recalcHeader();
                recalcSummary();
            }
        });

        document.addEventListener('blur', e => {
            if (e.target.matches(currencySelector)) {
                updateCurrencyInput(e.target);
            }
        }, true);

        // ===== vendor selections =====
        const vendorsContainer = document.getElementById('vendors');
        let vendorIdx = 0;

        function selectedVendorIds() { 
            return [...document.querySelectorAll('input[name="SelectedVendorIds"]:checked')].map(x=>x.value); 
        }

        function usedVendorIds() { 
            return [...document.querySelectorAll('#vendors .card [name$=".VendorId"]')].map(x=>x.value).filter(Boolean); 
        }

        function availableVendors() {
            const sel = new Set(selectedVendorIds());
            const used = new Set(usedVendorIds());
            
            return vendorsAll.filter(v => sel.has(v.id) && !used.has(v.id));
        }

        function vendorOptionsForCard(card) {
            const used = new Set(usedVendorIds());
            const select = card.querySelector('select');
            const currentId = card.dataset.vendorId || select?.value || '';
            const allowed = new Set(selectedVendorIds());
            if (currentId) used.delete(currentId);

            return vendorsAll.filter(v => allowed.has(v.id) && !used.has(v.id));
        }

        function refreshCardVendorOptions(card) {
            const select = card.querySelector('select');
            if (!select) return;

            const currentId = card.dataset.vendorId || select.value || '';
            const options = vendorOptionsForCard(card);
            if (options.length === 0) {
                select.innerHTML = '<option value="">(Select vendor)</option>';
                select.value = '';
                card.dataset.vendorId = '';
                return;
            }

            select.innerHTML = options.map(v => `<option value="${v.id}">${v.name}</option>`).join('');
            if (currentId && options.some(v => v.id === currentId)) {
                select.value = currentId;
            } else {
                select.value = options[0].id;
                card.dataset.vendorId = select.value;
            }
        }

        function updateVendorBlocks() {
            const sel = new Set(selectedVendorIds());
            document.querySelectorAll('#vendors .card[data-vendor-id]').forEach(card => {
                if (card.dataset.vendorId && !sel.has(card.dataset.vendorId)) card.remove();
            });
            document.getElementById('btnAddVendor').disabled = availableVendors().length === 0 || procItems.length === 0;
            document.querySelectorAll('#vendors .card[data-vendor-id]').forEach(card => {
                refreshCardVendorOptions(card);
                reindexVendorItems(card);
            });

            recalcSummary();
        }

        getAll('input[name="SelectedVendorIds"]').forEach(cb => cb.addEventListener('change', updateVendorBlocks));

        function getVendorItemIds(card) {
            return [...card.querySelectorAll('[data-item-block]')]
                .map(block => block.dataset.procOfferId)
                .filter(Boolean);
        }

        function availableProcItemsForCard(card, currentProcOfferId) {
            const used = new Set(getVendorItemIds(card));
            if (currentProcOfferId) used.delete(currentProcOfferId);
            return procItems.filter(item => !used.has(item.procOfferId));
        }

        function nextAvailableProcItem(card) {
            return availableProcItemsForCard(card, null)[0];
        }

        function findProcItem(procOfferId) {
            return (
                procItems.find(item => item.procOfferId === procOfferId) ?? {
                    procOfferId,
                    itemPenawaran: procOfferId
                }
            );
        }

        function addItemToVendor(card, presetItem, forceNew = false) {
            const idx = card.dataset.vendorIndex;
            if (idx === undefined) return;
            const host = card.querySelector('[data-itemhost]');
            if (!host) return;

            const existingBlock = host.querySelector('[data-item-block]');
            if (existingBlock && !forceNew) {
                existingBlock.scrollIntoView({ behavior: 'smooth', block: 'start' });
                return;
            }

            let itemInfo;
            if (presetItem?.procOfferId) {
                itemInfo = findProcItem(presetItem.procOfferId);
            } else {
                itemInfo = nextAvailableProcItem(card);
                if (!itemInfo) {
                    if (!procItems.length) {
                        alert('No offer items (ProcOffer) are available.');
                        return;
                    }
                    itemInfo = procItems[0];
                }
            }

            const block = buildVendorItemBlock(card, itemInfo, presetItem);
            if (!block) return;
            host.appendChild(block);
            reindexVendorItems(card);
            recalcSummary();
        }

        function buildVendorItemBlock(card, itemInfo, presetItem) {
            const block = document.createElement('div');
            block.dataset.itemBlock = '';
            block.dataset.procOfferId = itemInfo.procOfferId;
            block.innerHTML = `
                <input type="hidden" data-proc-input value="${itemInfo.procOfferId}" />
                <div class="mt-2 vstack gap-2" data-rounds></div>
            `;

            const hiddenInput = block.querySelector('[data-proc-input]');
            const rounds = block.querySelector('[data-rounds]');
            const addRoundRow = (letterValue = '', roundPreset = null) => {
                const row = document.createElement('div');
                row.dataset.roundRow = '1';

                row.innerHTML = `
                    <div class="d-flex gap-2 mb-1">
                        <div class="flex-grow-1">
                            <input class="form-control form-control-sm border-warning"
                                asp-for="NoLetter"
                                type="text"
                                data-letter
                                placeholder="No Letter"
                                value="${letterValue ?? ''}" />
                                <span class="text-danger small field-validation-valid" data-valmsg-letter data-valmsg-replace="true"></span>
                        </div>
                        <button type="button"
                            class="btn btn-outline-primary btn-sm"
                            data-add-item>
                            Add item
                        </button>
                        <button type="button" class="btn btn-outline-danger btn-sm" data-delround>Remove Round</button>
                    </div>
                    <table class="table table-sm mb-2">
                        <thead class="table-info">
                            <tr>
                                <th scope="col" style="min-width: 220px">Item</th>
                                <th scope="col" style="width: 140px" class="text-end">Quantity</th>
                                <th scope="col" style="width: 140px" class="text-end">Trip</th>
                                <th scope="col" style="width: 180px" class="text-end">Harga Penawaran</th>
                                <th scope="col" style="width: 180px" class="text-end">Total</th>
                                <th scope="col" style="width: 100px" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody data-round-body></tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="4" class="text-end">Total</td>
                                <td colspan="2" class="">
                                    <input class="form-control text-end" data-format-currency data-round-total readonly />
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                `;

                rounds.appendChild(row);
                
                const letterInput = row.querySelector('[data-letter]');
                if (letterInput) {
                    letterInput.value = letterValue ?? '';
                }
                
                const addItemBtn = row.querySelector('[data-add-item]')
                if (addItemBtn) {
                    addItemBtn.addEventListener('click', () => {
                        addRoundItemRow(row);
                    })
                }

                recalcRoundTotals(row);
                row.querySelector('[data-delround]').addEventListener('click', () => {
                    row.remove();
                    reindexVendorItems(card);
                    recalcSummary();
                });

                if (roundPreset) {
                    addRoundItemRow(row, roundPreset);
                }

                return row;
            };
            block._addRoundRow = preset => addRoundRow('', preset);

            const addRoundButton = block.querySelector('[data-item-add-round]');
            if (addRoundButton) {
                addRoundButton.addEventListener('click', () => {
                    addRoundRow('', { procOfferId: block.dataset.procOfferId });
                    reindexVendorItems(card);
                    recalcSummary();
                });
            }

            const removeItemButton = block.querySelector('[data-remove-item]');
            if (removeItemButton) {
                removeItemButton.addEventListener('click', () => {
                    block.remove();
                    reindexVendorItems(card);
                    recalcSummary();
                });
            }

            function addRoundItemRow(roundRow, presetRow) {
                if (!roundRow) return null;

                const tbody = roundRow.querySelector('[data-round-body]')
                if (!tbody) return null;

                const pdcRows = getAll('#pdcItems [data-item-row]');
                if (!pdcRows.length) {
                    alert("Belum ada item di tagihan PDC!")
                    return null;
                }

                let optionsHtml = '<option value="">-- Pilih item --</option>'
                pdcRows.forEach((pdcRow, idx) => {
                    const procId = pdcRow.dataset.procOfferId || '';
                    const nameCell = pdcRow.querySelector('[data-item-name]') || pdcRow.querySelector('td');
                    const rawName = nameCell ? (nameCell.textContent || '').trim() : `Item ${idx + 1}`;
                    const safeName = rawName.replace(/"/g, '&quot;');
                    const optionValue = procId || `row-${idx}`;

                    optionsHtml += `<option value="${optionValue}" data-proc-offer-id="${procId}">${safeName}</option>`;
                });

                const tr = document.createElement('tr')
                tr.dataset.roundItemRow = '1'
                tr.innerHTML = `
                    <td>
                        <select class="form-select form-select-sm" data-item-select>
                            ${optionsHtml}
                        </select>
                    </td>
                    <td class="text-end">
                        <div class="input-group input-group-sm">
                            <input class="form-control text-end"
                                type="text"
                                inputmode="numeric"
                                autocomplete="off"
                                data-qty
                                readonly />
                        </div>
                        <span class="text-danger small field-validation-valid" data-valmsg-qty data-valmsg-replace="true"></span>
                    </td>
                    <td class="text-end">
                        <div class="input-group input-group-sm">
                            <input class="form-control text-end"
                                type="text"
                                inputmode="numeric"
                                autocomplete="off"
                                data-trip />
                        </div>
                        <span class="text-danger small field-validation-valid" data-valmsg-trip data-valmsg-replace="true"></span>
                    </td>
                    <td class="text-end">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">Rp</span>
                            <input class="form-control text-end"
                                type="text"
                                inputmode="numeric"
                                autocomplete="off"
                                data-offer-price
                                data-format-currency />
                        </div>
                        <span class="text-danger small field-validation-valid" data-valmsg-price data-valmsg-replace="true"></span>
                    </td>
                    <td class="text-end">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">Rp</span>
                            <input class="form-control text-end"
                                type="text"
                                inputmode="numeric"
                                autocomplete="off"
                                data-item-total
                                data-format-currency
                                readonly />
                        </div>
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-outline-danger" data-remove-round-item>
                            <i class="bi bi-trash"></i> Hapus
                        </button>
                    </td>
                `;

                tbody.appendChild(tr);

                const select = tr.querySelector('[data-item-select]')
                const qtyInput = tr.querySelector("[data-qty]")
                const tripInput = tr.querySelector('[data-trip]')
                const priceInput = tr.querySelector('[data-offer-price]')
                const removeBtn = tr.querySelector('[data-remove-round-item]')

                bindCurrencyInputs(tr)

                if (select && qtyInput) {
                    select.addEventListener('change', () => {
                        const selectedOption = select.selectedOptions?.[0];
                        const rawValue = select.value || '';
                        const selectedProcId = (
                            selectedOption?.dataset?.procOfferId
                            ?? rawValue
                        ).toLowerCase();

                        if (!selectedProcId) {
                            qtyInput.value = '';
                            recalcRoundTotals(roundRow);
                            return;
                        }

                        const pdcMatch = [...pdcRows].find(
                            row => (row.dataset.procOfferId ?? '').toLowerCase() === selectedProcId
                        );

                        let qty = 0;
                        if (pdcMatch) {
                            const qtyField = pdcMatch.querySelector('[data-quantity]');
                            qty = qtyField ? numberValue(qtyField) : qty;
                        } else {
                            const offerMatch = procItems.find(item => item.procOfferId === procOfferId);
                            qty = offerMatch ? offerMatch.quantity ?? offerMatch.Quantity ?? 0 : 0;
                        }

                        qtyInput.value = qty.toString();

                        const tripInput = tr.querySelector('[data-trip]');
                        if (!pdcMatch && tripInput && !tripInput.value) {
                            const offerMatch = procItems.find(
                                item => (item.procOfferId ?? '').toLowerCase() === selectedProcId
                            );
                            const tripVal = offerMatch?.trip ?? offerMatch?.Trip;
                            if (tripVal !== undefined && tripVal !== null) {
                                tripInput.value = tripVal ?? '';
                            }
                        }

                        recalcRoundTotals(roundRow);
                    })
                }

                if (removeBtn) {
                    removeBtn.addEventListener('click', () => {
                        tr.remove();
                        recalcRoundTotals(roundRow);
                        // Reindex after removal
                        const card = roundRow.closest('.card[data-vendor-id]');
                        if (card) reindexVendorItems(card);
                    });
                }

                [tripInput, priceInput].forEach(input => {
                    if (!input) return;

                    ['input', 'change', 'blur'].forEach(evt => {
                        input.addEventListener(evt, () => {
                            setTimeout(() => recalcRoundTotals(roundRow), 0);
                        });
                    });
                });

                recalcRoundTotals(roundRow);
                
                // Reindex immediately after adding
                const card = roundRow.closest('.card[data-vendor-id]');
                if (card) reindexVendorItems(card);
                
                if (presetRow) {
                    const targetProc =
                        (presetRow.procOfferId
                            ?? block?.dataset?.procOfferId
                            ?? '').toLowerCase();

                    if (select && targetProc) {
                        const match = procItems.find(
                            item =>
                                (item.procOfferId ?? '').toLowerCase() === targetProc
                        );
                        if (match) {
                            select.value = match.procOfferId;
                            select.dispatchEvent(new Event('change'));
                        }
                    }

                    if (tripInput && presetRow.trip !== undefined && presetRow.trip !== null) {
                        tripInput.value = presetRow.trip;
                    }

                    if (priceInput && presetRow.priceValue !== undefined && presetRow.priceValue !== null) {
                        setCurrencyDisplay(priceInput, presetRow.priceValue?.toString() ?? '');
                    }
                }

                recalcRoundTotals(roundRow);
                
                return tr;
            }

            function recalcRoundTotals(roundRow) {
                if (!roundRow) return;

                let roundTotal = 0;

                roundRow.querySelectorAll('tbody tr').forEach(tr => {
                    const qtyInput = tr.querySelector('[data-qty]')
                    const tripInput = tr.querySelector('[data-trip]')
                    const priceInput = tr.querySelector('[data-offer-price]')
                    const totalInput = tr.querySelector('[data-item-total]')

                    const qty = qtyInput ? numberValue(qtyInput) : 0;
                    const trip = tripInput ?numberValue(tripInput) : 0;
                    const price = priceInput ? numberValue(priceInput) : 0;

                    const itemTotal = qty * trip * price;
                    roundTotal += itemTotal;

                    if (totalInput) {
                        totalInput.dataset.rawValue = itemTotal.toString();
                        totalInput.value = fmtClean(itemTotal);
                    }
                });

                const totalSpan = roundRow.querySelector('[data-round-total]');
                if (totalSpan) {
                    totalSpan.value = roundTotal;
                    totalSpan.dataset.rawValue = roundTotal.toString();
                }

                recalcSummary();
            }

            const defaultProcOfferId = itemInfo?.procOfferId ?? '';
            const presetRounds =
                Array.isArray(presetItem?.prices) && presetItem.prices.length > 0
                    ? presetItem.prices.map((price, index) => ({
                          priceValue: price,
                          letterValue: presetItem.letters?.[index] ?? '',
                          quantity: presetItem.quantity,
                          trip: presetItem.trip,
                          procOfferId: presetItem.procOfferId ?? defaultProcOfferId,
                      }))
                    : [
                          {
                              priceValue: '',
                              letterValue: '',
                              procOfferId: defaultProcOfferId,
                              quantity: presetItem?.quantity,
                              trip: presetItem?.trip,
                          },
                      ];

            presetRounds.forEach(r => addRoundRow(r.letterValue, r));


            return block;
        }

        function reindexVendorItems(card) {
            const idx = card.dataset.vendorIndex;
            if (idx === undefined) return;

            const blocks = card.querySelectorAll('[data-item-block]');
            blocks.forEach((block, itemIdx) => {
                block.dataset.itemIndex = itemIdx.toString();
                const hiddenInput = block.querySelector('[data-proc-input]');
                if (hiddenInput) {
                    hiddenInput.name = `Vendors[${idx}].Items[${itemIdx}].ProcOfferId`;
                }

                block.querySelectorAll('[data-round-row]').forEach((row, roundIdx) => {
                    const letter = row.querySelector('[data-letter]');
                    if (letter) {
                        letter.name = `Vendors[${idx}].Items[${itemIdx}].Letters[${roundIdx}]`;
                    }
                    
                    // Update all round item rows
                    row.querySelectorAll('[data-round-item-row]').forEach((itemRow, itemRowIdx) => {
                        const qtyInput = itemRow.querySelector('[data-qty]');
                        const tripInput = itemRow.querySelector('[data-trip]');
                        const priceInput = itemRow.querySelector('[data-offer-price]');
                        const qtyValMsg = itemRow.querySelector('[data-valmsg-qty]');
                        const tripValMsg = itemRow.querySelector('[data-valmsg-trip]');
                        const priceValMsg = itemRow.querySelector('[data-valmsg-price]');

                        if (qtyInput) {
                            qtyInput.name = `Vendors[${idx}].Items[${itemIdx}].Quantity`;
                            if (qtyValMsg) {
                                qtyValMsg.setAttribute('data-valmsg-for', qtyInput.name);
                                if (modelStateErrors[qtyInput.name]) {
                                    qtyValMsg.textContent = modelStateErrors[qtyInput.name];
                                    qtyValMsg.classList.remove('field-validation-valid');
                                    qtyValMsg.classList.add('field-validation-error');
                                }
                            }
                        }
                        if (tripInput) {
                            tripInput.name = `Vendors[${idx}].Items[${itemIdx}].Trip`;
                            if (tripValMsg) {
                                tripValMsg.setAttribute('data-valmsg-for', tripInput.name);
                                if (modelStateErrors[tripInput.name]) {
                                    tripValMsg.textContent = modelStateErrors[tripInput.name];
                                    tripValMsg.classList.remove('field-validation-valid');
                                    tripValMsg.classList.add('field-validation-error');
                                }
                            }
                        }
                        if (priceInput) {
                            priceInput.name = `Vendors[${idx}].Items[${itemIdx}].Prices[${roundIdx}]`;
                            if (priceValMsg) {
                                priceValMsg.setAttribute('data-valmsg-for', priceInput.name);
                                if (modelStateErrors[priceInput.name]) {
                                    priceValMsg.textContent = modelStateErrors[priceInput.name];
                                    priceValMsg.classList.remove('field-validation-valid');
                                    priceValMsg.classList.add('field-validation-error');
                                }
                            }
                        }
                    });
                });
            });
        }

        function addVendor(presetVendor) {
            const av = availableVendors();
            const vendorIdPreset = presetVendor?.vendorId;
            if (!vendorIdPreset && !av.length) { alert('Select a vendor first.'); return; }
            if (!procItems.length && !presetVendor) { alert('No offer items (ProcOffer) are available.'); return; }

            const vendorId = vendorIdPreset ?? (av[0]?.id ?? '');
            if (!vendorId) { alert('Select a vendor first.'); return; }
            const idx = vendorIdx++;
            const card = document.createElement('div');

            card.className = 'card border';
            card.innerHTML = `
                <div class="card-body">
                    <div class="row g-2 align-items-end">
                        <div class="col-md-5">
                            <label class="form-label fw-semibold">Vendor</label>
                            <select name="Vendors[${idx}].VendorId" class="form-select"></select>
                        </div>
                        <div class="col-md-7">
                            <div class="hstack gap-2">
                                <button type="button" class="btn btn-outline-primary btn-sm" data-add-round>
                                    <i class="bi bi-plus-lg"></i> Add Round
                                </button>
                                <button type="button" class="btn btn-outline-danger btn-sm ms-auto" data-del>
                                    <i class="bi bi-trash"></i> Remove Vendor
                                </button>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="mt-3" data-itemhost></div>
                    <div class="d-flex justify-content-end mt-3 py-2 gap-5 border-top border-bottom">
                        <div class="fw-semibold">Final Round</div>
                        <div><span data-format-currency data-vendor-total>0</span></div>
                    </div>
                </div>
            `;

            vendorsContainer.appendChild(card);
            card.dataset.vendorId = vendorId;
            card.dataset.vendorIndex = idx;
            const select = card.querySelector('select');

            refreshCardVendorOptions(card);
            if (vendorIdPreset && [...select.options].some(opt => opt.value === vendorIdPreset)) {
                select.value = vendorIdPreset;
                card.dataset.vendorId = vendorIdPreset;
            } else {
                select.value = vendorId;
            }
            select.addEventListener('change', () => {
                card.dataset.vendorId = select.value;
                updateVendorBlocks();
            });

            const addRoundBtn = card.querySelector('[data-add-round]');
            if (addRoundBtn) {
                addRoundBtn.addEventListener('click', () => {
                    let blocks = card.querySelectorAll('[data-item-block]');
                    if (!blocks.length) {
                        addItemToVendor(card, null, true);
                        blocks = card.querySelectorAll('[data-item-block]');
                    }

                    blocks.forEach(block => {
                        if (typeof block._addRoundRow === 'function') {
                            block._addRoundRow({ procOfferId: block.dataset.procOfferId });
                        }
                    });

                    reindexVendorItems(card);
                    recalcSummary();
                });
            }

            card.querySelector('[data-del]').addEventListener('click', () => {
                card.remove();
                updateVendorBlocks();
            });
            updateVendorBlocks();
            
            const presetItems = Array.isArray(presetVendor?.items) ? presetVendor.items : [];
            if (presetItems.length) {
                presetItems.forEach(item => addItemToVendor(card, item));
            } else {
                addItemToVendor(card);
            }
        }

        document.getElementById('btnAddVendor').addEventListener('click', () => addVendor());

        // ===== Summary (Σ last round / item) =====
        function recalcSummary() {
            const revenueField = getEl('#revenue');
            const revenue = revenueField?.dataset?.rawValue
                ? parseFloat(revenueField.dataset.rawValue) || 0
                : parseFloat(digitsOnly(revenueField?.value)) || 0;
            const tbody = document.querySelector('#summary tbody');
            tbody.innerHTML = '';

            document.querySelectorAll('#vendors .card[data-vendor-id]').forEach(card => {
                const sel = card.querySelector('select');
                const vendorName = getVendorName(sel);

                let vendorTotal = getVendorBestTotal(card);
                if (!vendorTotal || !isFinite(vendorTotal)) {
                    return;
                }

                const totalPenawaranNode = card.querySelector('[data-vendor-total]')
                if (totalPenawaranNode) {
                    totalPenawaranNode.textContent = fmtClean(vendorTotal)
                    totalPenawaranNode.dataset.rawValue = vendorTotal.toString();
                }
                
                const profit = revenue - vendorTotal;
                const pct = revenue > 0 ? (profit / revenue) * 100 : 0;
                const tr = document.createElement('tr');
                tr.dataset.totalRaw = vendorTotal.toString();
                tr.innerHTML = `
                    <td>${vendorName}</td>
                    <td class="text-end">${fmtClean(vendorTotal)}</td>
                    <td class="text-end">${fmtClean(profit)}</td>
                    <td class="text-end">${pct.toFixed(2)}%</td>`;
                tbody.appendChild(tr);
            });

            const rows = [...tbody.querySelectorAll('tr')];
            if (rows.length){
                rows.forEach(row => row.classList.remove('table-success'));
                const best = rows.reduce((bestRow, current) => {
                    const bestVal = parseFloat(bestRow.dataset.totalRaw || '0') || 0;
                    const currentVal = parseFloat(current.dataset.totalRaw || '0') || 0;
                    return currentVal < bestVal ? current : bestRow;
                }, rows[0]);
                best.classList.add('table-success');
            }
        }

        function getVendorBestTotal(card) {
            const spans = card.querySelectorAll('[data-round-total]')
            if (!spans.length) return 0;

            let best = Number.POSITIVE_INFINITY;
            let hasValid = false;

            spans.forEach(span => {
                const raw = span.dataset?.rawValue ?? digitsOnly(span.textContent || '');
                const val = parseFloat(raw);
                if (!isNaN(val) && val > 0) {
                    hasValid = true;
                    if (val < best) best = val;
                }
            })

            return hasValid ? best : 0;
        }

        // init
        (function init(){
            bindCurrencyInputs(document);
            document.querySelectorAll(currencySelector).forEach(input => updateCurrencyInput(input));

            const distanceInput = document.getElementById("Distance")
            if (distanceInput) {
                distanceInput.addEventListener('input', recalcKmPer25FromDistance);
                distanceInput.addEventListener('change', recalcKmPer25FromDistance);

                if (distanceInput.value) {
                    recalcKmPer25FromDistance();
                }
            }
            
            recalcHeader();
            updateVendorBlocks();
            if (Array.isArray(presetVendors) && presetVendors.length) {
                presetVendors.forEach(vendor => {
                    if (vendor?.vendorId) {
                        const checkbox = document.getElementById('vendor_' + vendor.vendorId);
                        if (checkbox) {
                            checkbox.checked = true;
                        }
                    }
                    addVendor(vendor);
                });
            }
            const form = document.getElementById('pl-form');
            if (form) {
                form.addEventListener('submit', () => {
                    document.querySelectorAll(currencySelector).forEach(input => {
                        input.value = input.dataset?.rawValue ?? digitsOnly(input.value);
                    });
                });
            }
        })();

        
    </script>
