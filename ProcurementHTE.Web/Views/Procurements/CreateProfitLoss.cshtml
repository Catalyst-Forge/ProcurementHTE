@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Globalization
@model ProcurementHTE.Web.Models.ViewModels.ProfitLossInputViewModel
@{
    ViewData["Title"] = "Create Profit & Loss";
}

<form asp-action="CreateProfitLossPost" asp-controller="Procurements" method="post" id="pl-form">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProcurementId" />

    <header class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Create Profit &amp; Loss</h1>
            <p class="text-muted small mb-0">
                Procurement: <strong>@ViewBag.ProcNum</strong> &middot; Issued: @ViewBag.IssueDate
            </p>
        </div>

        <nav class="d-flex gap-2" aria-label="Page navigation">
            <a asp-action="Details" asp-route-id="@Model.ProcurementId" class="btn btn-outline-secondary" role="button">
                <i class="bi bi-arrow-left"></i> Back to Procurement
            </a>
        </nav>
    </header>

    @if (TempData["WarningMessage"] != null) {
        <div class="alert alert-warning small">@TempData["WarningMessage"]</div>
    }

    <div asp-validation-summary="All" class="text-danger small mb-3"></div>

    <div class="row g-3">
        <!-- ================= VENDOR LIST ================= -->
        <section class="col-12" aria-labelledby="vendor-section-title">
            <div class="card shadow-sm p-2">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="vendor-section-title">Select Participating Vendors</legend>
                    <hr />
                    <div class="row row-cols-2 row-cols-md-3 g-3">
                        @foreach (var vendor in Model.VendorChoices) {
                            <div class="col mb-2">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="SelectedVendorIds"
                                           value="@vendor.Id"
                                           id="vendor_@vendor.Id" />
                                    <label class="form-check-label" for="vendor_@vendor.Id">
                                        @vendor.Name
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </fieldset>
            </div>
        </section>

        <!-- ================= FINANCIAL SUMMARY ================= -->
        <section class="col-12" aria-labelledby="financial-section-title">
            <div class="card shadow-sm p-2">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="financial-section-title">Financial Figures</legend>
                    <hr />
                    <div class="row g-3">
                        <!-- Accrual -->
                        <div class="col-md-4">
                            <label asp-for="AccrualAmount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">Rp.</span>
                                <input asp-for="AccrualAmount"
                                       class="form-control text-end"
                                       inputmode="numeric"
                                       type="text"
                                       data-format-currency />
                            </div>
                            <span class="text-danger" asp-validation-for="AccrualAmount"></span>
                        </div>

                        <!-- Realization -->
                        <div class="col-md-4">
                            <label asp-for="RealizationAmount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">Rp.</span>
                                <input asp-for="RealizationAmount"
                                       class="form-control text-end"
                                       inputmode="numeric"
                                       type="text"
                                       data-format-currency />
                            </div>
                            <span class="text-danger" asp-validation-for="RealizationAmount"></span>
                        </div>

                        <!-- Distance (tanpa currency) -->
                        <div class="col-md-4">
                            <label asp-for="Distance" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Distance"
                                       class="form-control text-end"
                                       inputmode="numeric" />
                                <span class="input-group-text">KM</span>
                            </div>
                            <span class="text-danger" asp-validation-for="Distance"></span>
                        </div>
                    </div>
                </fieldset>
            </div>
        </section>


        <!-- ================= BILLING TO PDC (PER-ITEM) ================= -->
        <section class="col-12" aria-labelledby="pdc-section-title">
            <div class="card shadow-sm">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="pdc-section-title">Billing to PDC (Revenue Builder per Item)</legend>
                    <hr />
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="min-width:220px">Offer Item</th>
                                    <th class="text-end" style="width:180px">Quantity</th>
                                    <th class="text-end" style="width:180px">400 km Rate</th>
                                    <th class="text-end" style="width:160px">Additional Rate</th>
                                    <th class="text-end" style="width:140px">KM/25</th>
                                    <th class="text-end" style="width:180px">Operator Cost</th>
                                    <th class="text-end" style="width:180px">Revenue</th>
                                </tr>
                            </thead>
                            <tbody id="pdcItems">
                                @for (var i = 0; i < Model.Items.Count; i++) {
                                    var procOfferId = Model.Items[i].ProcOfferId;
                                    var itemName = Model.OfferItems.FirstOrDefault(x => x.ProcOfferId == procOfferId)?.ItemPenawaran;

                                    <tr data-item-row>
                                        <input type="hidden" name="Items.Index" value="@i" />
                                        <input type="hidden" name="Items[@i].ProcOfferId" value="@procOfferId" />

                                        <td class="fw-semibold">@itemName</td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <input class="form-control text-end"
                                                       name="Items[@i].Quantity"
                                                       data-quantity
                                                       type="number"
                                                       inputmode="numeric"
                                                       autocomplete="off"
                                                       value="@Model.Items[i].Quantity.ToString(CultureInfo.InvariantCulture)" />
                                            </div>
                                        </td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">Rp</span>
                                                <input class="form-control text-end"
                                                       name="Items[@i].TarifAwal"
                                                       data-tarif-awal
                                                       data-format-currency 
                                                       type="text"
                                                       inputmode="numeric"
                                                       autocomplete="off"
                                                       value="@Model.Items[i].TarifAwal.ToString(CultureInfo.InvariantCulture)" />
                                            </div>
                                        </td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">Rp</span>
                                                <input class="form-control text-end"
                                                       name="Items[@i].TarifAdd"
                                                       data-tarif-add
                                                       data-format-currency
                                                       type="text"
                                                       inputmode="numeric"
                                                       autocomplete="off"
                                                       value="@Model.Items[i].TarifAdd.ToString(CultureInfo.InvariantCulture)" />
                                            </div>
                                        </td>

                                        <td class="text-end">
                                            <input class="form-control form-control-sm text-end"
                                                   name="Items[@i].KmPer25"
                                                   data-km
                                                   type="number"
                                                   inputmode="numeric"
                                                   min="0"
                                                   value="@Model.Items[i].KmPer25.ToString(CultureInfo.InvariantCulture)"
                                                   readonly />
                                        </td>


                                        <td class="text-end">
                                            <input class="form-control form-control-sm text-end" data-operator readonly />
                                        </td>

                                        <td class="text-end">
                                            <input class="form-control form-control-sm text-end fw-semibold" data-rev readonly />
                                        </td>
                                    </tr>
                                }
                            </tbody>

                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="5" class="text-end">TOTAL</th>
                                    <th class="text-end">
                                        <input id="operatorCost" class="form-control form-control-sm text-end" readonly />
                                    </th>
                                    <th class="text-end">
                                        <input id="revenue" class="form-control form-control-sm text-end fw-bold" readonly />
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <small class="text-muted">Operator cost per item = <em>Additional Rate × KM/25</em>, Revenue per item = <em>400 km Rate + Operator Cost</em></small>
                </fieldset>
            </div>
        </section>

        <!-- ================= PENAWARAN VENDOR ================= -->
        <section class="col-12" aria-labelledby="offer-section-title">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h3 class="card-title fw-semibold mb-0 h4" id="offer-section-title">Vendor Offers</h3>
                        <button type="button" class="btn btn-outline-primary btn-sm" id="btnAddVendor">
                            <i class="bi bi-person-plus"></i> Add Vendor
                        </button>
                    </div>
                    <hr />
                    <div id="vendors" class="vstack gap-3 overflow-auto pe-2"></div>
                </div>
            </div>
        </section>

        <!-- ================= ESTIMASI PERHITUNGAN PROFIT ================= -->
        <section class="col-12" aria-labelledby="summary-section-title">
            <div class="card shadow-sm">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="summary-section-title">Interim Summary</legend>
                    <hr />
                    <div class="table-responsive border rounded-3">
                        <table class="table align-middle mobile-table" id="summary">
                            <thead class="table-light">
                                <tr>
                                    <th>Vendor</th>
                                    <th class="text-end">Final Offer (Σ min / item)</th>
                                    <th class="text-end">Profit</th>
                                    <th class="text-end">Profit %</th>
                                </tr>
                            </thead>
                            <tbody>
                                @* dikosongin, nanti diisi JS recalcSummary *@
                            </tbody>
                        </table>
                    </div>
                </fieldset>
            </div>
        </section>


        <!-- ================= ACTION ================= -->
        <div class="col-12 d-flex justify-content-end gap-2 mb-3">
            <button type="submit" class="btn btn-primary">Save &amp; Calculate</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        var vendorChoicesJson = System.Text.Json.JsonSerializer.Serialize(
            (Model.VendorChoices ?? System.Linq.Enumerable.Empty<ProcurementHTE.Web.Models.ViewModels.VendorChoiceViewModel>())
                .Select(v => new { id = v.Id, name = v.Name })
        );
        var vendorChoicesJsonLiteral = System.Text.Json.JsonSerializer.Serialize(vendorChoicesJson);

        var procItemsJson = System.Text.Json.JsonSerializer.Serialize(
            (Model.OfferItems ?? new System.Collections.Generic.List<ProcurementHTE.Web.Models.ViewModels.ProcOfferLiteVm>())
                .Select(i => new { procOfferId = i.ProcOfferId, itemPenawaran = i.ItemPenawaran })
        );
        var procItemsJsonLiteral = System.Text.Json.JsonSerializer.Serialize(procItemsJson);
    }

    <script>
        // --- data server ---
        const vendorsAll = JSON.parse(@Html.Raw(vendorChoicesJsonLiteral));
        const procItems = JSON.parse(@Html.Raw(procItemsJsonLiteral));

        // helpers
        const fmtClean = n => { 
            const x = Number(n||0); 
            return x % 1 === 0 ? 
                x.toLocaleString('id-ID',{maximumFractionDigits:0}) 
                : 
                x.toLocaleString('id-ID'); };
        const getEl = sel => document.querySelector(sel);
        const getAll = sel => document.querySelectorAll(sel);
        const currencySelector = '[data-format-currency]';
        const thousandGroupRegex = /\B(?=(\d{3})+(?!\d))/g;

        const cleanDecimal = val => {
            const num = parseFloat(val);
            return isNaN(num) ? val : (Number.isInteger(num) ? num.toString() : val);
        };

        const digitsOnly = value => (value ?? '').toString().replace(/\D/g, '');

        function setCurrencyDisplay(input, rawValue) {
            if (!input) return;
            const normalized = digitsOnly(cleanDecimal(rawValue));
            input.dataset.rawValue = normalized;
            input.value = normalized ? normalized.replace(thousandGroupRegex, '.') : '';
        }

        function updateCurrencyInput(input, notify = false) {
            if (!input) return;
            const selectionStart = input.selectionStart ?? input.value.length;
            const digitsBefore = input.value.slice(0, selectionStart).replace(/\D/g, '').length;
            const raw = digitsOnly(input.value);
            setCurrencyDisplay(input, raw);
            if (document.activeElement === input) {
                const formatted = input.value;
                if (!formatted) {
                    input.setSelectionRange(0, 0);
                } else {
                    let cursorPos = formatted.length;
                    if (digitsBefore === 0) {
                        cursorPos = 0;
                    } else {
                        let digitCount = 0;
                        for (let idx = 0; idx < formatted.length; idx++) {
                            if (/\d/.test(formatted[idx])) {
                                digitCount++;
                                if (digitCount >= digitsBefore) {
                                    cursorPos = idx + 1;
                                    break;
                                }
                            }
                        }
                    }
                    input.setSelectionRange(cursorPos, cursorPos);
                }
            }
            if (notify) handleCurrencyChange(input);
        }

        function bindCurrencyInput(input) {
            if (!input || input.dataset.currencyBound === '1') return;
            input.dataset.currencyBound = '1';
            setCurrencyDisplay(input, input.value);
        }

        function bindCurrencyInputs(scope) {
            (scope || document).querySelectorAll(currencySelector).forEach(bindCurrencyInput);
        }

        function handleCurrencyChange(input) {
            if (input.matches('[data-tarif-awal],[data-tarif-add]')) {
                recalcHeader();
            } else if (input.matches('[data-price]')) {
                recalcSummary();
            }
        }

        function numberValue(input) {
            if (!input) return 0;
            const raw = input.dataset?.rawValue;
            if (raw && raw.length) return parseFloat(raw);
            const fallback = digitsOnly(input.value);
            return fallback ? parseFloat(fallback) : 0;
        }

        function getVendorName(selectEl) {
            if (!selectEl) return '';
            if (selectEl.selectedOptions && selectEl.selectedOptions.length > 0) {
                return selectEl.selectedOptions[0].text || '';
            }

            const idx = typeof selectEl.selectedIndex === 'number' ? selectEl.selectedIndex : -1;
            if (idx >= 0 && selectEl.options && selectEl.options.length > idx) {
                return selectEl.options[idx].text || '';
            }
            
            return '';
        }

        // ===== per-item -> total calc =====
        function distanceValue() {
            const distInput = document.querySelector('input[name="Distance"]');
            if (!distInput) return 0;
            const raw = distInput.value ? distInput.value.replace(',', '.') : '';
            const distance = parseFloat(raw);
            return Number.isFinite(distance) ? distance : 0;
        }

        function recalcHeader() {
            let opTotal = 0, revTotal = 0;

            const distance = distanceValue();

            getAll('#pdcItems [data-item-row]').forEach(row => {
                const qty = numberValue(row.querySelector('[data-quantity]'));
                const a   = numberValue(row.querySelector('[data-tarif-awal]'));
                const add = numberValue(row.querySelector('[data-tarif-add]'));

                let km = parseFloat(row.querySelector('[data-km]').value || 0);

                // KmPer25 otomatis dari Distance jika diisi; kalau tidak, pakai nilai input
                if (distance > 0) {
                    const computedKm = distance > 400 ? (distance - 400) / 25 : 0;
                    if (Number.isFinite(computedKm) && computedKm >= 0) {
                        km = computedKm;
                        const kmInput = row.querySelector('[data-km]');
                        if (kmInput) {
                            kmInput.value = km.toString();
                        }
                    }
                }

                const op  = add * km;
                const rev = (a + op) * qty;

                row.querySelector('[data-operator]').value = fmtClean(op);
                row.querySelector('[data-rev]').value      = fmtClean(rev);

                opTotal += op;
                revTotal += rev;
            });

            const opField = getEl('#operatorCost');
            if (opField) {
                opField.value = fmtClean(opTotal);
                opField.dataset.rawValue = opTotal.toString();
            }

            const revField = getEl('#revenue');
            if (revField) {
                revField.value = fmtClean(revTotal);
                revField.dataset.rawValue = revTotal.toString();
            }

            recalcSummary();
        }


        document.addEventListener('input', e => {
            if (e.target.matches(currencySelector)) {
                updateCurrencyInput(e.target, true);
                return;
            }

            // KM/25 atau Quantity berubah → hitung ulang header + summary
            if (e.target.matches('[data-km],[data-quantity]')) {
                recalcHeader(); // recalcHeader sudah memanggil recalcSummary() di dalamnya
            }
        });


        document.addEventListener('blur', e => {
            if (e.target.matches(currencySelector)) {
                updateCurrencyInput(e.target);
            }
        }, true);

        // ===== vendor selections =====
        const vendorsContainer = document.getElementById('vendors');
        let vendorIdx = 0;

        function selectedVendorIds() { 
            return [...document.querySelectorAll('input[name="SelectedVendorIds"]:checked')].map(x=>x.value); 
        }

        function usedVendorIds() { 
            return [...document.querySelectorAll('#vendors .card [name$=".VendorId"]')].map(x=>x.value).filter(Boolean); 
        }

        function availableVendors() {
            const sel = new Set(selectedVendorIds());
            const used = new Set(usedVendorIds());
            
            return vendorsAll.filter(v => sel.has(v.id) && !used.has(v.id));
        }

        function vendorOptionsForCard(card) {
            const used = new Set(usedVendorIds());
            const select = card.querySelector('select');
            const currentId = card.dataset.vendorId || select?.value || '';
            const allowed = new Set(selectedVendorIds());
            if (currentId) used.delete(currentId);

            return vendorsAll.filter(v => allowed.has(v.id) && !used.has(v.id));
        }

        function refreshCardVendorOptions(card) {
            const select = card.querySelector('select');
            if (!select) return;

            const currentId = card.dataset.vendorId || select.value || '';
            const options = vendorOptionsForCard(card);
            if (options.length === 0) {
                select.innerHTML = '<option value="">(Select vendor)</option>';
                select.value = '';
                card.dataset.vendorId = '';
                return;
            }

            select.innerHTML = options.map(v => `<option value="${v.id}">${v.name}</option>`).join('');
            if (currentId && options.some(v => v.id === currentId)) {
                select.value = currentId;
            } else {
                select.value = options[0].id;
                card.dataset.vendorId = select.value;
            }
        }

        function updateVendorBlocks() {
            const sel = new Set(selectedVendorIds());
            document.querySelectorAll('#vendors .card[data-vendor-id]').forEach(card => {
                if (card.dataset.vendorId && !sel.has(card.dataset.vendorId)) card.remove();
            });
            document.getElementById('btnAddVendor').disabled = availableVendors().length === 0 || procItems.length === 0;
            document.querySelectorAll('#vendors .card[data-vendor-id]').forEach(card => {
                refreshCardVendorOptions(card);
                reindexVendorItems(card);
            });

            recalcSummary();
        }

        document.querySelectorAll('input[name="SelectedVendorIds"]').forEach(cb => cb.addEventListener('change', updateVendorBlocks));

        function getVendorItemIds(card) {
            return [...card.querySelectorAll('[data-item-block]')]
                .map(block => block.dataset.procOfferId)
                .filter(Boolean);
        }

        function availableProcItemsForCard(card, currentProcOfferId) {
            const used = new Set(getVendorItemIds(card));
            if (currentProcOfferId) used.delete(currentProcOfferId);
            return procItems.filter(item => !used.has(item.procOfferId));
        }

        function nextAvailableProcItem(card) {
            return availableProcItemsForCard(card, null)[0];
        }

        function findProcItem(procOfferId) {
            return (
                procItems.find(item => item.procOfferId === procOfferId) ?? {
                    procOfferId,
                    itemPenawaran: procOfferId
                }
            );
        }

        function addItemToVendor(card, presetItem) {
            const idx = card.dataset.vendorIndex;
            if (idx === undefined) return;
            const host = card.querySelector('[data-itemhost]');
            if (!host) return;

            let itemInfo;
            if (presetItem?.procOfferId) {
                itemInfo = findProcItem(presetItem.procOfferId);
            } else {
                itemInfo = nextAvailableProcItem(card);
                if (!itemInfo) {
                    alert('All offer items already added for this vendor.');
                    return;
                }
            }

            const block = buildVendorItemBlock(card, itemInfo, presetItem);
            if (!block) return;
            host.appendChild(block);
            refreshItemSelects(card);
            reindexVendorItems(card);
            recalcSummary();
        }

        function buildVendorItemBlock(card, itemInfo, presetItem) {
            const block = document.createElement('div');
            block.className = 'border rounded-3 p-2 mb-3';
            block.dataset.itemBlock = '';
            block.dataset.procOfferId = itemInfo.procOfferId;
            block.innerHTML = `
                <div class="row g-2 align-items-center">
                    <div class="col">
                        <label class="form-label form-label-sm mb-1">Offer Item</label>
                        <select class="form-select form-select-sm" data-item-select></select>
                    </div>
                    <div class="col-auto d-flex gap-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-addround>+ Round</button>
                        <button type="button" class="btn btn-sm btn-outline-danger" data-remove-item>Remove</button>
                    </div>
                </div>
                <input type="hidden" data-proc-input value="${itemInfo.procOfferId}" />
                <div class="mt-2 vstack gap-2" data-rounds></div>
            `;

            const select = block.querySelector('[data-item-select]');
            const populateOptions = (currentId) => {
                const options = availableProcItemsForCard(card, currentId);
                if (options.length === 0) {
                    select.innerHTML = '<option value="">No items available</option>';
                    select.value = '';
                    return false;
                }

                select.innerHTML = options
                    .map(item => `<option value="${item.procOfferId}">${item.itemPenawaran || item.procOfferId}</option>`)
                    .join('');

                if (currentId && options.some(item => item.procOfferId === currentId)) {
                    select.value = currentId;
                } else {
                    select.value = options[0].procOfferId;
                }

                block.dataset.procOfferId = select.value;
                hiddenInput.value = select.value;
                return true;
            };

            const hiddenInput = block.querySelector('[data-proc-input]');
            if (!populateOptions(itemInfo.procOfferId)) {
                block.remove();
                return null;
            }

            select.addEventListener('change', () => {
                block.dataset.procOfferId = select.value;
                hiddenInput.value = select.value;
                refreshItemSelects(card);
                reindexVendorItems(card);
                recalcSummary();
            });

            const rounds = block.querySelector('[data-rounds]');
            const addRoundRow = (priceValue = '', letterValue = '') => {
                const row = document.createElement('div');
                row.className = 'input-group input-group-sm';
                row.dataset.roundRow = '1';
                row.innerHTML = `
                    <span class="input-group-text">No</span>
                    <input class="form-control form-control-sm"
                           type="text"
                           data-letter
                           placeholder="No Letter"
                           value="${letterValue ?? ''}" />
                    <span class="input-group-text">Rp</span>
                    <input class="form-control text-end"
                           type="text"
                           inputmode="numeric"
                           autocomplete="off"
                           data-price
                           data-format-currency
                           value="${priceValue ?? ''}" />
                    <button type="button" class="btn btn-outline-danger" data-delround>Remove</button>`;

                rounds.appendChild(row);
                const priceInput = row.querySelector('[data-price]');
                bindCurrencyInput(priceInput);
                updateCurrencyInput(priceInput);
                row.querySelector('[data-delround]').addEventListener('click', () => {
                    row.remove();
                    reindexVendorItems(card);
                    recalcSummary();
                });
                return row;
            };

            const presetRounds =
                Array.isArray(presetItem?.prices) && presetItem.prices.length > 0
                    ? presetItem.prices.map((price, index) => ({
                          priceValue: price,
                          letterValue: presetItem.letters?.[index] ?? ''
                      }))
                    : [{ priceValue: '', letterValue: '' }];

            presetRounds.forEach(r => addRoundRow(r.priceValue, r.letterValue));

            block.querySelector('[data-addround]').addEventListener('click', () => {
                addRoundRow();
                reindexVendorItems(card);
                recalcSummary();
            });

            block.querySelector('[data-remove-item]').addEventListener('click', () => {
                block.remove();
                refreshItemSelects(card);
                reindexVendorItems(card);
                recalcSummary();
            });

            return block;
        }

        function refreshItemSelects(card) {
            card.querySelectorAll('[data-item-block]').forEach(block => {
                const select = block.querySelector('[data-item-select]');
                const hiddenInput = block.querySelector('[data-proc-input]');
                if (!select) return;

                const currentId = block.dataset.procOfferId;
                const options = availableProcItemsForCard(card, currentId);

                if (options.length === 0) {
                    select.innerHTML = '<option value="">No items available</option>';
                    select.value = '';
                    block.dataset.procOfferId = '';
                    if (hiddenInput) hiddenInput.value = '';
                    return;
                }

                select.innerHTML = options
                    .map(item => `<option value="${item.procOfferId}">${item.itemPenawaran || item.procOfferId}</option>`)
                    .join('');

                if (currentId && options.some(item => item.procOfferId === currentId)) {
                    select.value = currentId;
                } else {
                    select.value = options[0].procOfferId;
                    block.dataset.procOfferId = select.value;
                    if (hiddenInput) hiddenInput.value = select.value;
                }
            });

            const addItemBtn = card.querySelector('[data-add-item]');
            if (addItemBtn) {
                addItemBtn.disabled = availableProcItemsForCard(card, null).length === 0;
            }
        }

        function reindexVendorItems(card) {
            const idx = card.dataset.vendorIndex;
            if (idx === undefined) return;

            const blocks = card.querySelectorAll('[data-item-block]');
            blocks.forEach((block, itemIdx) => {
                block.dataset.itemIndex = itemIdx.toString();
                const hiddenInput = block.querySelector('[data-proc-input]');
                if (hiddenInput) {
                    hiddenInput.name = `Vendors[${idx}].Items[${itemIdx}].ProcOfferId`;
                }

                block.querySelectorAll('[data-round-row]').forEach((row, roundIdx) => {
                    const letter = row.querySelector('[data-letter]');
                    const price = row.querySelector('[data-price]');
                    if (letter) {
                        letter.name = `Vendors[${idx}].Items[${itemIdx}].Letters[${roundIdx}]`;
                    }
                    if (price) {
                        price.name = `Vendors[${idx}].Items[${itemIdx}].Prices[${roundIdx}]`;
                    }
                });
            });
        }

        function addVendor() {
            const av = availableVendors();
            if (!av.length) { alert('Select a vendor first.'); return; }
            if (procItems.length === 0) { alert('No offer items (ProcOffer) are available.'); return; }

            const vendorId = av[0].id;
            const idx = vendorIdx++;
            const card = document.createElement('div');

            card.className = 'card border';
            card.innerHTML = `
                <div class="card-body">
                    <div class="row g-2 align-items-end">
                        <div class="col-md-5">
                            <label class="form-label">Vendor</label>
                            <select name="Vendors[${idx}].VendorId" class="form-select"></select>
                        </div>
                        <div class="col-md-7">
                            <div class="hstack gap-2">
