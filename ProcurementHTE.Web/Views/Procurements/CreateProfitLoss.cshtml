@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Globalization
@model ProcurementHTE.Web.Models.ViewModels.ProfitLossInputViewModel
@{
    ViewData["Title"] = "Create Profit & Loss";
}

<form asp-action="CreateProfitLossPost" asp-controller="WorkOrders" method="post" id="pl-form">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="WorkOrderId" />

    <header class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Create Profit &amp; Loss</h1>
            <p class="text-muted small mb-0">
                WO: <strong>@ViewBag.WoNum</strong> &middot; Issued: @ViewBag.IssueDate
            </p>
        </div>

        <nav class="d-flex gap-2" aria-label="Navigasi halaman">
            <a asp-action="Details" asp-route-id="@Model.WorkOrderId" class="btn btn-outline-secondary" role="button">
                <i class="bi bi-arrow-left"></i> Back to WO
            </a>
        </nav>
    </header>

    @if (TempData["WarningMessage"] != null) {
        <div class="alert alert-warning small">@TempData["WarningMessage"]</div>
    }

    <div asp-validation-summary="All" class="text-danger small mb-3"></div>

    <div class="row g-3">
        <!-- ================= VENDOR LIST ================= -->
        <section class="col-12" aria-labelledby="vendor-section-title">
            <div class="card shadow-sm p-2">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="vendor-section-title">Pilih Vendor yang Diikutkan</legend>
                    <hr />
                    <div class="row row-cols-2 row-cols-md-3 g-3">
                        @foreach (var vendor in Model.VendorChoices) {
                            <div class="col mb-2">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="SelectedVendorIds"
                                           value="@vendor.Id"
                                           id="vendor_@vendor.Id" />
                                    <label class="form-check-label" for="vendor_@vendor.Id">
                                        @vendor.Name
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </fieldset>
            </div>
        </section>

        <!-- ================= TAGIHAN KE PDC (PER-ITEM) ================= -->
        <section class="col-12" aria-labelledby="pdc-section-title">
            <div class="card shadow-sm">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="pdc-section-title">Tagihan ke PDC (Revenue Builder per Item)</legend>
                    <hr />
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="min-width:220px">Item Penawaran</th>
                                    <th class="text-end" style="width:180px">Tarif 400 km</th>
                                    <th class="text-end" style="width:160px">Tarif Add</th>
                                    <th class="text-end" style="width:140px">KM/25</th>
                                    <th class="text-end" style="width:180px">Operator Cost</th>
                                    <th class="text-end" style="width:180px">Revenue</th>
                                </tr>
                            </thead>
                            <tbody id="pdcItems">
                                @for (var i = 0; i < Model.Items.Count; i++) {
                                    var woId = Model.Items[i].WoOfferId;
                                    var itemName = Model.WoItems.FirstOrDefault(x => x.WoOfferId == woId)?.ItemPenawaran;

                                    <tr data-item-row>
                                        <input type="hidden" name="Items.Index" value="@i" />
                                        <input type="hidden" name="Items[@i].WoOfferId" value="@woId" />

                                        <td class="fw-semibold">@itemName</td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">Rp</span>
                                                <input class="form-control text-end"
                                                       name="Items[@i].TarifAwal"
                                                       data-tarif-awal
                                                       data-format-currency
                                                       type="text"
                                                       inputmode="numeric"
                                                       autocomplete="off"
                                                       value="@Model.Items[i].TarifAwal.ToString(CultureInfo.InvariantCulture)" />
                                            </div>
                                        </td>

                                        <td class="text-end">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">Rp</span>
                                                <input class="form-control text-end"
                                                       name="Items[@i].TarifAdd"
                                                       data-tarif-add
                                                       data-format-currency
                                                       type="text"
                                                       inputmode="numeric"
                                                       autocomplete="off"
                                                       value="@Model.Items[i].TarifAdd.ToString(CultureInfo.InvariantCulture)" />
                                            </div>
                                        </td>

                                        <td class="text-end">
                                            <input class="form-control form-control-sm text-end"
                                                   name="Items[@i].KmPer25"
                                                   data-km type="number" inputmode="numeric" min="0"
                                                   value="@(Model.Items[i].KmPer25)" />
                                        </td>

                                        <td class="text-end">
                                            <input class="form-control form-control-sm text-end" data-operator readonly />
                                        </td>
                                        <td class="text-end">
                                            <input class="form-control form-control-sm text-end fw-semibold" data-rev readonly />
                                        </td>
                                    </tr>
                                }
                            </tbody>

                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="4" class="text-end">TOTAL</th>
                                    <th class="text-end">
                                        <input id="operatorCost" class="form-control form-control-sm text-end" readonly />
                                    </th>
                                    <th class="text-end">
                                        <input id="revenue" class="form-control form-control-sm text-end fw-bold" readonly />
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <small class="text-muted">Operator Cost per item = <em>Tarif Add × KM/25</em>, Revenue per item = <em>Tarif 400 km + Operator Cost</em></small>
                </fieldset>
            </div>
        </section>

        <!-- ================= PENAWARAN VENDOR ================= -->
        <section class="col-12" aria-labelledby="offer-section-title">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h3 class="card-title fw-semibold mb-0" id="offer-section-title">Penawaran Vendor</h3>
                        <button type="button" class="btn btn-outline-primary btn-sm" id="btnAddVendor">
                            <i class="bi bi-person-plus"></i> Tambah Vendor
                        </button>
                    </div>
                    <hr />
                    <div id="vendors" class="vstack gap-3 overflow-auto pe-2"></div>
                </div>
            </div>
        </section>

        <!-- ================= ESTIMASI PERHITUNGAN PROFIT ================= -->
        <section class="col-12" aria-labelledby="summary-section-title">
            <div class="card shadow-sm">
                <fieldset class="card-body">
                    <legend class="card-title fw-semibold" id="summary-section-title">Ringkasan Sementara</legend>
                    <hr />
                    <div class="table-responsive border rounded-3">
                        <table class="table align-middle mobile-table" id="summary">
                            <thead class="table-light">
                                <tr>
                                    <th>Vendor</th>
                                    <th class="text-end">Final Offer (Σ last / item)</th>
                                    <th class="text-end">Profit</th>
                                    <th class="text-end">Profit %</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </fieldset>
            </div>
        </section>

        <!-- ================= ACTION ================= -->
        <div class="col-12 d-flex justify-content-end gap-2 mb-3">
            <button type="submit" class="btn btn-primary">Simpan &amp; Hitung</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        var vendorChoicesJson = System.Text.Json.JsonSerializer.Serialize(
            (Model.VendorChoices ?? System.Linq.Enumerable.Empty<ProcurementHTE.Web.Models.ViewModels.VendorChoiceViewModel>())
                .Select(v => new { id = v.Id, name = v.Name })
        );
        var vendorChoicesJsonLiteral = System.Text.Json.JsonSerializer.Serialize(vendorChoicesJson);

        var woItemsJson = System.Text.Json.JsonSerializer.Serialize(
            (Model.WoItems ?? new System.Collections.Generic.List<ProcurementHTE.Web.Models.ViewModels.WoOfferLiteVm>())
                .Select(i => new { woOfferId = i.WoOfferId, itemPenawaran = i.ItemPenawaran })
        );
        var woItemsJsonLiteral = System.Text.Json.JsonSerializer.Serialize(woItemsJson);
    }

    <script>
        // --- data server ---
        const vendorsAll = JSON.parse(@Html.Raw(vendorChoicesJsonLiteral));
        const woItems = JSON.parse(@Html.Raw(woItemsJsonLiteral));

        // helpers
        const fmtClean = n => { const x = Number(n||0); return x % 1 === 0 ? x.toLocaleString('id-ID',{maximumFractionDigits:0}) : x.toLocaleString('id-ID'); };
        const $ = sel => document.querySelector(sel);
        const $$ = sel => document.querySelectorAll(sel);

        const currencySelector = '[data-format-currency]';
        const thousandGroupRegex = /\B(?=(\d{3})+(?!\d))/g;

        const cleanDecimal = val => {
            const num = parseFloat(val);
            return isNaN(num) ? val : (Number.isInteger(num) ? num.toString() : val);
        };

        const digitsOnly = value => (value ?? '').toString().replace(/\D/g, '');

        function setCurrencyDisplay(input, rawValue) {
            if (!input) return;
            const normalized = digitsOnly(cleanDecimal(rawValue));
            input.dataset.rawValue = normalized;
            input.value = normalized ? normalized.replace(thousandGroupRegex, '.') : '';
        }

        function updateCurrencyInput(input, notify = false) {
            if (!input) return;
            const selectionStart = input.selectionStart ?? input.value.length;
            const digitsBefore = input.value.slice(0, selectionStart).replace(/\D/g, '').length;
            const raw = digitsOnly(input.value);
            setCurrencyDisplay(input, raw);
            if (document.activeElement === input) {
                const formatted = input.value;
                if (!formatted) {
                    input.setSelectionRange(0, 0);
                } else {
                    let cursorPos = formatted.length;
                    if (digitsBefore === 0) {
                        cursorPos = 0;
                    } else {
                        let digitCount = 0;
                        for (let idx = 0; idx < formatted.length; idx++) {
                            if (/\d/.test(formatted[idx])) {
                                digitCount++;
                                if (digitCount >= digitsBefore) {
                                    cursorPos = idx + 1;
                                    break;
                                }
                            }
                        }
                    }
                    input.setSelectionRange(cursorPos, cursorPos);
                }
            }
            if (notify) handleCurrencyChange(input);
        }

        function bindCurrencyInput(input) {
            if (!input || input.dataset.currencyBound === '1') return;
            input.dataset.currencyBound = '1';
            setCurrencyDisplay(input, input.value);
        }

        function bindCurrencyInputs(scope) {
            (scope || document).querySelectorAll(currencySelector).forEach(bindCurrencyInput);
        }

        function handleCurrencyChange(input) {
            if (input.matches('[data-tarif-awal],[data-tarif-add]')) {
                recalcHeader();
            } else if (input.matches('[data-price]')) {
                recalcSummary();
            }
        }

        function numberValue(input) {
            if (!input) return 0;
            const raw = input.dataset?.rawValue;
            if (raw && raw.length) return parseFloat(raw);
            const fallback = digitsOnly(input.value);
            return fallback ? parseFloat(fallback) : 0;
        }

            function getVendorName(selectEl) {
                if (!selectEl) return '';
                if (selectEl.selectedOptions && selectEl.selectedOptions.length > 0) {
                    return selectEl.selectedOptions[0].text || '';
                }
                const idx = typeof selectEl.selectedIndex === 'number' ? selectEl.selectedIndex : -1;
                if (idx >= 0 && selectEl.options && selectEl.options.length > idx) {
                    return selectEl.options[idx].text || '';
                }
                return '';
            }

            // ===== per-item -> total calc =====
            function recalcHeader() {
                let opTotal = 0, revTotal = 0;

                $$('#pdcItems [data-item-row]').forEach(row => {
                const a = numberValue(row.querySelector('[data-tarif-awal]'));
                const add = numberValue(row.querySelector('[data-tarif-add]'));
                    const km = parseFloat(row.querySelector('[data-km]').value || 0);

                    const op = add * km;
                    const rev = a + op;

                    row.querySelector('[data-operator]').value = fmtClean(op);
                    row.querySelector('[data-rev]').value = fmtClean(rev);

                    opTotal += op; revTotal += rev;
                });

                const opField = $('#operatorCost');
                if (opField) {
                    opField.value = fmtClean(opTotal);
                    opField.dataset.rawValue = opTotal.toString();
                }
                const revField = $('#revenue');
                if (revField) {
                    revField.value = fmtClean(revTotal);
                    revField.dataset.rawValue = revTotal.toString();
                }
                recalcSummary();
            }
            document.addEventListener('input', e => {
                if (e.target.matches(currencySelector)) {
                    updateCurrencyInput(e.target, true);
                    return;
                }
                if (e.target.matches('[data-km]')) {
                    recalcHeader();
                    recalcSummary();
                }
            });

            document.addEventListener('blur', e => {
                if (e.target.matches(currencySelector)) {
                    updateCurrencyInput(e.target);
                }
            }, true);

            // ===== vendor selections =====
            const vendorsContainer = document.getElementById('vendors');
            let vendorIdx = 0;

            function selectedVendorIds(){ return [...document.querySelectorAll('input[name="SelectedVendorIds"]:checked')].map(x=>x.value); }
            function usedVendorIds(){ return [...document.querySelectorAll('#vendors .card [name$=".VendorId"]')].map(x=>x.value).filter(Boolean); }
            function availableVendors(){
                const sel = new Set(selectedVendorIds());
                const used = new Set(usedVendorIds());
                return vendorsAll.filter(v => sel.has(v.id) && !used.has(v.id));
            }

            function vendorOptionsForCard(card) {
                const select = card.querySelector('select');
                const currentId = card.dataset.vendorId || select?.value || '';
                const allowed = new Set(selectedVendorIds());
                const used = new Set(usedVendorIds());
                if (currentId) used.delete(currentId);
                return vendorsAll.filter(v => allowed.has(v.id) && !used.has(v.id));
            }

            function refreshCardVendorOptions(card) {
                const select = card.querySelector('select');
                if (!select) return;
                const currentId = card.dataset.vendorId || select.value || '';
                const options = vendorOptionsForCard(card);
                if (options.length === 0) {
                    select.innerHTML = '<option value="">(Pilih vendor)</option>';
                    select.value = '';
                    card.dataset.vendorId = '';
                    return;
                }
                select.innerHTML = options.map(v => `<option value="${v.id}">${v.name}</option>`).join('');
                if (currentId && options.some(v => v.id === currentId)) {
                    select.value = currentId;
                } else {
                    select.value = options[0].id;
                    card.dataset.vendorId = select.value;
                }
            }

            function updateVendorBlocks(){
                const sel = new Set(selectedVendorIds());
                document.querySelectorAll('#vendors .card[data-vendor-id]').forEach(card => {
                    if (card.dataset.vendorId && !sel.has(card.dataset.vendorId)) card.remove();
                });
                document.getElementById('btnAddVendor').disabled = availableVendors().length === 0 || woItems.length === 0;
                document.querySelectorAll('#vendors .card[data-vendor-id]').forEach(refreshCardVendorOptions);
                recalcSummary();
            }
            document.querySelectorAll('input[name="SelectedVendorIds"]').forEach(cb => cb.addEventListener('change', updateVendorBlocks));

            function addVendor(){
                const av = availableVendors();
                if (!av.length) { alert('Pilih vendor terlebih dahulu.'); return; }
                if (woItems.length === 0) { alert('Belum ada Item Penawaran (WoOffer).'); return; }
                const vendorId = av[0].id;

                const idx = vendorIdx++;
                const card = document.createElement('div');
                card.className = 'card border';
                card.innerHTML = `
                    <div class="card-body">
                        <div class="row g-2 align-items-end">
                            <div class="col-md-5">
                                <label class="form-label">Vendor</label>
                                <select name="Vendors[${idx}].VendorId" class="form-select"></select>
                            </div>
                            <div class="col-md-7">
                                <div class="hstack gap-2">
                                    <button type="button" class="btn btn-outline-danger btn-sm ms-auto" data-del><i class="bi bi-trash"></i> Hapus Vendor</button>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3" data-itemhost></div>
                    </div>`;
                vendorsContainer.appendChild(card);
                card.dataset.vendorId = vendorId;
                const select = card.querySelector('select');
                refreshCardVendorOptions(card);
                select.value = vendorId;
                select.addEventListener('change', ()=>{
                    card.dataset.vendorId = select.value;
                    updateVendorBlocks();
                });

                // render all WO items -> each has rounds
            const host = card.querySelector('[data-itemhost]');
            woItems.forEach((it,iIdx) => {
                const block = document.createElement('div');
                    block.className = 'border rounded-3 p-2 mb-2';
                    block.setAttribute('data-item-block','');
                    block.innerHTML = `
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="fw-semibold">${it.itemPenawaran}</div>
                            <button type="button" class="btn btn-sm btn-outline-secondary" data-addround>+ Round</button>
                        </div>
                        <input type="hidden" name="Vendors[${idx}].Items[${iIdx}].WoOfferId" value="${it.woOfferId}" />
                        <div class="mt-2 vstack gap-2" data-rounds></div>
                    `;
                    host.appendChild(block);

                    const rounds = block.querySelector('[data-rounds]');
                    let r = 0;
                    const addRound = (priceValue = '', letterValue = '') => {
                        const row = document.createElement('div');
                        row.className = 'input-group input-group-sm';
                        row.innerHTML = `
                            <span class="input-group-text">No</span>
                            <input class="form-control form-control-sm" name="Vendors[${idx}].Items[${iIdx}].Letters[${r}]" type="text" data-letter placeholder="No Letter" value="${letterValue ?? ''}" />
                            <span class="input-group-text">Rp</span>
                            <input class="form-control text-end"
                                   name="Vendors[${idx}].Items[${iIdx}].Prices[${r}]"
                                   type="text"
                                   inputmode="numeric"
                                   autocomplete="off"
                                   data-price
                                   data-format-currency
                                   value="${priceValue ?? ''}" />
                            <button type="button" class="btn btn-outline-danger" data-delround>Hapus</button>`;
                        rounds.appendChild(row);
                        const priceInput = row.querySelector('[data-price]');
                        bindCurrencyInput(priceInput);
                        updateCurrencyInput(priceInput);
                        row.querySelector('[data-delround]').addEventListener('click', ()=>{ row.remove(); recalcSummary(); });
                        r++;
            };
                    addRound();
                    block.querySelector('[data-addround]').addEventListener('click', addRound);
                });

            card.querySelector('[data-del]').addEventListener('click', ()=>{ card.remove(); updateVendorBlocks(); });
            updateVendorBlocks();
        }
            document.getElementById('btnAddVendor').addEventListener('click', addVendor);

            // ===== Summary (Σ last round / item) =====
            function recalcSummary(){
                const revenueField = $('#revenue');
                const revenue = revenueField?.dataset?.rawValue
                    ? parseFloat(revenueField.dataset.rawValue) || 0
                    : parseFloat(digitsOnly(revenueField?.value)) || 0;
                const tbody = document.querySelector('#summary tbody');
                tbody.innerHTML = '';

                document.querySelectorAll('#vendors .card[data-vendor-id]').forEach(card => {
                    const sel = card.querySelector('select');
                    const vendorName = getVendorName(sel);

                    let vendorTotal = 0;
                    let complete = true;
                    card.querySelectorAll('[data-item-block]').forEach(block => {
                        if (!complete) return;
                        const inputs = block.querySelectorAll('[data-price]');
                        if (!inputs.length) {
                            complete = false;
                            return;
                        }
                        const last = inputs[inputs.length-1];
                        const rawVal = last?.dataset?.rawValue;
                        const val = rawVal && rawVal.length ? parseFloat(rawVal) : parseFloat(digitsOnly(last.value)) || 0;
                        if (!(val > 0)) {
                            complete = false;
                            return;
                        }
                        vendorTotal += val;
                    });

                    if (!complete || vendorTotal <= 0) return;

                    const profit = revenue - vendorTotal;
                    const pct = revenue ? (profit / revenue) * 100 : 0;
                    const tr = document.createElement('tr');
                    tr.dataset.totalRaw = vendorTotal.toString();
                    tr.innerHTML = `
                        <td>${vendorName}</td>
                        <td class="text-end">${fmtClean(vendorTotal)}</td>
                        <td class="text-end">${fmtClean(profit)}</td>
                        <td class="text-end">${pct.toFixed(2)}%</td>`;
                    tbody.appendChild(tr);
                });

                const rows = [...tbody.querySelectorAll('tr')];
                if (rows.length){
                    rows.forEach(row => row.classList.remove('table-success'));
                    const best = rows.reduce((bestRow, current) => {
                        const bestVal = parseInt(bestRow.dataset.totalRaw || '0', 10) || 0;
                        const currentVal = parseInt(current.dataset.totalRaw || '0', 10) || 0;
                        return currentVal < bestVal ? current : bestRow;
                    }, rows[0]);
                    best.classList.add('table-success');
                }
            }

            // init
            (function init(){
                bindCurrencyInputs(document);
                document.querySelectorAll(currencySelector).forEach(input => updateCurrencyInput(input));
                recalcHeader();
                updateVendorBlocks();
                const form = document.getElementById('pl-form');
                if (form) {
                    form.addEventListener('submit', () => {
                        document.querySelectorAll(currencySelector).forEach(input => {
                            input.value = input.dataset?.rawValue ?? digitsOnly(input.value);
                        });
                    });
                }
            })();
    </script>
}



