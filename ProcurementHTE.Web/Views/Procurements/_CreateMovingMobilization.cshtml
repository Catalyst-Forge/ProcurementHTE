@model ProcurementHTE.Web.Models.ViewModels.ProcurementCreateViewModel
@{
    var partialName = ViewBag.CreatePartial as string ?? "_CreateOther";
    var jobTypeName = ViewBag.SelectedJobTypeName as string ?? "Other";
}

<section class="card shadow-sm mb-3 p-2 rounded-4">
    <fieldset class="card-body">
        <legend class="card-title fw-semibold">Notes</legend>
        <hr />
        <div class="row">
            <div class="col-12 mb-3">
                <textarea asp-for="Procurement.Note" class="form-control" maxlength="200" rows="3"></textarea>
            </div>
        </div>
    </fieldset>
</section>

<section class="card shadow-sm mb-3 p-2 rounded-4">
    <fieldset class="card-body">
        <legend class="card-title fw-semibold">Contact Person</legend>
        <hr />
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                <label asp-for="Procurement.Note" class="form-label">Contact Person in location</label>
                <input asp-for="Procurement.Note" class="form-control">
                <span asp-validation-for="Procurement.Note" class="text-danger small"></span>
            </div>

            <div class="col-12 col-md-6 mb-3">
                <label asp-for="Procurement.Note" class="form-label">Contact Person in workshop</label>
                <input asp-for="Procurement.Note" class="form-control">
                <span asp-validation-for="Procurement.Note" class="text-danger small"></span>
            </div>
        </div>
    </fieldset>
</section>

<div class="mb-3 d-flex w-100 justify-content-end">
    @* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createWoModal"><i class="bi bi-check2-circle"></i> Save WO Moving</button> *@
    <button type="submit" class="btn btn-success" name="submitAction" value="Created"><i class="bi bi-check2-circle"></i> Create Job Type Moving</button>

</div>

@* Modal *@
<div class="modal fade" id="createProcModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createProcModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="createProcModalLabel">Create Procurement</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Would you like to create a new procurement or save it as a draft?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" name="submitAction" value="Draft">Save/Draft</button>
                <button type="submit" class="btn btn-success" name="submitAction" value="Created">Create</button>
            </div>
        </div>
    </div>
</div>
