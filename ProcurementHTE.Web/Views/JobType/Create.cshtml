@using ProcurementHTE.Core.Models
@model JobTypes

@{
    ViewData["Title"] = "Create Job Type Data";
}

<div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
    <h1 class="h3 mb-0">Procurement Type</h1>
    <a asp-action="Index" class="btn btn-outline-secondary" role="button"><i class="bi bi-arrow-left"></i> Back to list</a>
</div>

<form asp-action="Create" method="post" asp-antiforgery="true" class="js-loading-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <section class="card shadow-sm mb-3">
        <fieldset class="card-body">
            <div class="mb-3">
                <label asp-for="TypeName" class="form-label"></label>
                <input type="text" asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </fieldset>
    </section>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary"><i class="bi bi-check2-circle"></i> Submit</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
