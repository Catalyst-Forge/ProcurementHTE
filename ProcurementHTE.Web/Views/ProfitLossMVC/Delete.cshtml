@using ProcurementHTE.Web.Models.ViewModels
@model DeleteProfitLossViewModel

@{
    ViewData["Title"] = "Hapus Profit & Loss";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Hapus Profit & Loss
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Perhatian!</strong> Tindakan ini tidak dapat dibatalkan.
                    </div>

                    <div class="mb-4">
                        <h6 class="text-muted">Data yang akan dihapus:</h6>
                        <dl class="row">
                            <dt class="col-sm-4">No WO:</dt>
                            <dd class="col-sm-8"><strong>@Model.WoNum</strong></dd>
                            <dt class="col-sm-4">Vendor:</dt>
                            <dd class="col-sm-8"><strong>@Model.VendorName</strong></dd>
                            <dt class="col-sm-4">Profit:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.Profit > 0 ? "bg-success" : "bg-danger")">
                                    Rp @Model.Profit
                                </span>
                            </dd>
                        </dl>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> Batal
                        </a>
                        <form method="post" action="@Url.Action("DeleteConfirmed", new { id = Model.ProfitLossId })"
                              style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Hapus Selamanya
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>