@using ProcurementHTE.Web.Models.Admin
@model UserManagementIndexViewModel

@{
    ViewData["Title"] = "Manajemen User";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Manajemen User</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Tambah User
    </a>
</div>

@if (TempData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-3">
    <div class="col-md-3">
        <div class="card mb-2">
            <div class="card-body py-2">
                <small class="text-muted d-block">Total User</small>
                <span class="fw-bold">@Model.TotalCount</span>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-2">
            <div class="card-body py-2">
                <small class="text-muted d-block">Aktif</small>
                <span class="fw-bold text-success">@Model.ActiveCount</span>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-2">
            <div class="card-body py-2">
                <small class="text-muted d-block">Nonaktif</small>
                <span class="fw-bold text-danger">@Model.InactiveCount</span>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-2">
            <div class="card-body py-2">
                <small class="text-muted d-block">2FA Aktif</small>
                <span class="fw-bold text-info">@Model.TwoFactorEnabledCount</span>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">
        Filter
    </div>
    <div class="card-body">
        <form method="get" class="row gy-2 gx-2 align-items-end">
            <div class="col-md-4">
                <label asp-for="Filters.Search" class="form-label">Search</label>
                <input asp-for="Filters.Search" class="form-control" placeholder="Nama, email, username, jabatan..." />
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Filters.Role">Role</label>
                <select asp-for="Filters.Role" class="form-select">
                    <option value="">Semua Role</option>
                    @foreach (var role in Model.AvailableRoles)
                    {
                        <option value="@role.Name">@role.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="Filters.Status" class="form-label">Status</label>
                <select asp-for="Filters.Status" class="form-select">
                    <option value="">Semua</option>
                    <option value="active">Aktif</option>
                    <option value="inactive">Nonaktif</option>
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="Filters.TwoFactor" class="form-label">2FA</label>
                <select asp-for="Filters.TwoFactor" class="form-select">
                    <option value="">Semua</option>
                    <option value="enabled">Aktif</option>
                    <option value="disabled">Tidak Aktif</option>
                </select>
            </div>
            <div class="col-md-1 text-end">
                <button type="submit" class="btn btn-secondary w-100">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        Daftar User
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nama</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Jabatan</th>
                        <th>Roles</th>
                        <th>Status</th>
                        <th>2FA</th>
                        <th>Last Login</th>
                        <th style="width: 140px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.DisplayName</td>
                                <td>@user.Email</td>
                                <td>@user.UserName</td>
                                <td>@user.JobTitle</td>
                                <td>
                                    @if (user.Roles.Any())
                                    {
                                        foreach (var role in user.Roles)
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Nonaktif</span>
                                    }
                                </td>
                                <td>
                                    @if (user.TwoFactorEnabled)
                                    {
                                        <span class="badge bg-info text-dark">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">-</span>
                                    }
                                </td>
                                <td>
                                    @(user.LastLoginAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form asp-action="ToggleActive" asp-route-id="@user.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-outline-warning"
                                                    onclick="return confirm('Ubah status aktif user ini?');">
                                                <i class="bi bi-power"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center py-4">
                                Tidak ada data user.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <div class="card-footer">
            <nav>
                <ul class="pagination mb-0">
                    @{
                        var currentPage = Model.Filters.Page <= 0 ? 1 : Model.Filters.Page;
                    }

                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(currentPage - 1)"
                           asp-route-search="@Model.Filters.Search"
                           asp-route-role="@Model.Filters.Role"
                           asp-route-status="@Model.Filters.Status"
                           asp-route-twoFactor="@Model.Filters.TwoFactor">
                            &laquo;
                        </a>
                    </li>

                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@i"
                               asp-route-search="@Model.Filters.Search"
                               asp-route-role="@Model.Filters.Role"
                               asp-route-status="@Model.Filters.Status"
                               asp-route-twoFactor="@Model.Filters.TwoFactor">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(currentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(currentPage + 1)"
                           asp-route-search="@Model.Filters.Search"
                           asp-route-role="@Model.Filters.Role"
                           asp-route-status="@Model.Filters.Status"
                           asp-route-twoFactor="@Model.Filters.TwoFactor">
                            &raquo;
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
