@model IEnumerable<ProcurementHTE.Core.Models.WoDocumentApprovals>

<h3>Daftar Dokumen Menunggu Approval</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Work Order</th>
            <th>Document</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model) {
            <tr>
                <td>@a.WorkOrder.WoNum</td>
                <td>@a.WoDocument.DocumentType.Name</td>
                <td>@a.Status</td>
                <td>
                    <form asp-action="Approve" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@a.WoDocumentApprovalId" />
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                    <form asp-action="Reject" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@a.WoDocumentApprovalId" />
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
