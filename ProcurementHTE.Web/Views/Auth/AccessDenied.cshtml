@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h1 class="fs-3">Access Denied</h1>
            </div>

            <div class="card-body text-center">
                <h2 class="fs-4">Don't have permission to Access this resource</h2>
                <p class="text-muted">Appropriate role/permission to view this page.accept-policy Contact your administrator if you believe this is align-baseline error.</p>

                <div class="mt-4">
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary" role="button">Go to Dashboard</a>
                    <a href="javascript:history.back()" class="btn btn-secondary" role="button">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>