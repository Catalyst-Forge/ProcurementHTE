@model ProcurementHTE.Core.Models.ViewModels.LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = "Recovery Code";
    Layout = "_AuthenticationLayout";
}

<div class="d-flex justify-content-center">
  <div class="card p-4 shadow-sm" style="width: 500px">
    <header class="text-center mb-3">
      <h1 class="fs-3 mb-1">Gunakan Recovery Code</h1>
      <p class="text-muted mb-0">Masukkan salah satu recovery code yang belum pernah dipakai.</p>
    </header>

    <div class="card-body">
      <form asp-action="LoginWithRecoveryCode" method="post" asp-route-returnUrl="@Model.ReturnUrl">
        <input type="hidden" name="RememberMe" value="@(Model.RememberMe ? "true" : "false")" />
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3">
          <label asp-for="RecoveryCode" class="form-label"></label>
          <input asp-for="RecoveryCode" class="form-control form-control-lg text-center" autocomplete="one-time-code" />
          <span asp-validation-for="RecoveryCode" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Masuk</button>
      </form>

      <div class="text-center mt-3">
        <a asp-action="LoginWith2fa" asp-route-rememberMe="@Model.RememberMe" asp-route-returnUrl="@Model.ReturnUrl">Kembali ke verifikasi kode</a>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
