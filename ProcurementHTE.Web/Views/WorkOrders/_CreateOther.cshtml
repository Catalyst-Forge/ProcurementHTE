@model ProcurementHTE.Core.Models.WorkOrder
<form id="wo-form" method="post" action="@Url.Action("Create","WorkOrders")" data-type="Other">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="WoTypeId" />
    <partial name="_CreateBaseFields" model="Model" />

    <div class="row g-3 mt-1">
        <div class="col-12">
            <label asp-for="Note" class="form-label">Catatan Tambahan</label>
            <input asp-for="Note" class="form-control" />
            <span asp-validation-for="Note" class="text-danger small"></span>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-success">Simpan WO Other</button>
        <button type="button" class="btn btn-secondary" id="btnBackToType">Kembali</button>
    </div>
</form>
