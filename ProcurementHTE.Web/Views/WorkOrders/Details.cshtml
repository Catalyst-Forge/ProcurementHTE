@using Microsoft.AspNetCore.Authorization
@using ProcurementHTE.Core.Models
@using ProcurementHTE.Core.Authorization
@inject IAuthorizationService AuthZ
@model WorkOrder
@{
    ViewData["Title"] = "Work Order Details";
    var no = 1;
    var canEdit = await AuthZ.AuthorizeAsync(User, Permissions.WO.Edit);
    var canDelete = await AuthZ.AuthorizeAsync(User, Permissions.WO.Delete);
    var pnl = ViewBag.PnlViewModel as ProcurementHTE.Web.Models.ViewModels.ProfitLossSummaryViewModel;
    Func<string, string> BadgeClass = s => (s ?? "").ToLower() switch {
        "draft" => "bg-secondary-subtle text-secondary-emphasis border border-secondary-subtle",
        "created" => "bg-info-subtle text-info-emphasis border border-info-subtle",
        "completed" => "bg-success-subtle text-success-emphasis border border-success-subtle",
        "closed" => "bg-warning-subtle text-warning-emphasis border border-warning-subtle",
        _ => "bg-light text-body border"
    };
}

<header class="mb-3">
    <div class="hstack justify-content-between">
        <h1 class="h2">@ViewBag.Title</h1>

        <div class="d-flex gap-2" role="group" aria-label="Button Action">
            <span title="@(pnl != null ? "data pnl sudah ada" : "")">
                <a asp-action="CreateProfitLoss" asp-route-workOrderId="@Model?.WorkOrderId" class="btn btn-outline-@(pnl != null ? "secondary disabled" : "primary")" role="button" aria-disabled="true"><i class="bi bi-file-earmark-text-fill"></i> Create Profit & Loss</a>
            </span>
            <a asp-action="Edit" asp-route-id="@Model?.WorkOrderId" class="btn btn-outline-warning" role="button"><i class="bi bi-pencil-square"></i> Edit</a>
            <a asp-action="Delete" asp-route-id="@Model?.WorkOrderId" class="btn btn-outline-danger" role="button"><i class="bi bi-trash-fill"></i> Delete</a>
            <a asp-action="Index" class="btn btn-outline-secondary" role="button"><i class="bi bi-arrow-left"></i> Back to List</a>
        </div>
    </div>

    @* Navigation tabs *@
    <nav>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="wo-tab" data-bs-toggle="tab"
                        data-bs-target="#wo-tab-pane" type="button" role="tab"
                        aria-controls="wo-tab-pane" aria-selected="true">
                    Work order information
                </button>
            </li>

            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pnl-tab" data-bs-toggle="tab" data-bs-target="#pnl-tab-pane" type="button" role="tab" aria-controls="pnl-tab-pane" aria-selected="false">Profit and Loss</button>
            </li>
        </ul>
    </nav>
</header>

@* Content body *@
<div class="tab-content" id="myTabContent">
    <!-- ================= WORK ORDER DETAIL ================= -->
    <section class="tab-pane show active" id="wo-tab-pane" role="tabpanel" aria-labelledby="wo-tab" tabindex="0">
        <div class="d-grid gap-4 mt-2" style="grid-template-columns: 2fr 1fr">
            <div>
                @* Work request card *@
                <article class="card shadow-sm mb-3 p-2 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-clipboard2-minus-fill text-primary me-1"></i> Job Request</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <div class="row mb-0">
                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.WoNum)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.WoNum)</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.DateLetter)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Model?.DateLetter.ToTanggalIndonesia()</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.FromLocation)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.FromLocation)</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.Destination)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.Destination)</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.WBS)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@(Model?.WBS ?? "-")</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.GlAccount)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@(Model?.GlAccount ?? "-")</dd>
                            </dl>

                            <dl class="col-6 mb-2">
                                <dt class="fw-semibold text-uppercase text-secondary">@Html.DisplayNameFor(model => model.DateRequired)</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Model?.DateRequired.ToTanggalIndonesia()</dd>
                            </dl>

                        </div>
                    </div>
                </article>

                @* Item details card *@
                <article class="card shadow-sm mb-3 p-2 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-box2-fill text-primary me-1"></i> Item Details</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <div class="table-responsive rounded-3">
                            <table class="table table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <th class="mw-100 text-nowrap text-uppercase">No</th>
                                        <th class="mw-100 text-nowrap text-uppercase">Item Name</th>
                                        <th class="mw-100 text-nowrap text-uppercase">Qty</th>
                                        <th class="mw-100 text-nowrap text-uppercase">Unit</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model?.WoDetails != null && Model.WoDetails.Any()) {
                                        foreach (var detail in Model.WoDetails) {
                                            <tr>
                                                <td>@no</td>
                                                <td>@detail.ItemName</td>
                                                <td>@detail.Quantity</td>
                                                <td>@detail.Unit</td>
                                            </tr>
                                            no++;
                                        }
                                    } else {
                                        <tr>
                                            <td colspan="5" class="text-center text-muted">Belum ada rincian barang</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </article>

                @* Item card *@
                <article class="card shadow-sm mb-3 p-2 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-file-text-fill text-primary me-1"></i> Job Description</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <div class="row mb-0">
                            <dl class="col-12 mb-3">
                                <dt class="fw-semibold text-uppercase text-secondary mb-2">
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>
                                <dd class="bg-body text-primary-emphasis p-3 lh-base border-start border-primary rounded-3 border-5">
                                    @Html.DisplayFor(model => model.Description)
                                </dd>
                            </dl>

                            <dl class="col-6 mb-3">
                                <dt class="fw-semibold text-uppercase text-secondary mb-2">From</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.XS1)</dd>
                            </dl>

                            <dl class="col-6 mb-3">
                                <dt class="fw-semibold text-uppercase text-secondary mb-2">To</dt>
                                <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.XS2)</dd>
                            </dl>
                            
                            <dl class="col-12 mb-3">
                                <dt class="fw-semibold text-uppercase text-secondary mb-2">@Html.DisplayNameFor(model => model.Note)</dt>
                                <dd class="bg-info-subtle text-info-emphasis p-3 lh-base border-start border-info rounded-3 border-5">@Html.DisplayFor(model => model.Note)</dd>
                            </dl>
                        </div>
                    </div>
                </article>
            </div>

            <div>
                @* Work order information card *@
                <article class="card shadow-sm mb-3 p-2 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-info-circle-fill text-primary me-1"></i> Information Work Order</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <div class="row mb-0">
                            <dl class="col-6">
                                <dt class="fw-semibold text-uppercase text-secondary mb-1">
                                    @Html.DisplayNameFor(model => model.WoType)
                                </dt>
                                <dd>
                                    <span class="badge bg-info rounded-5 p-2 px-3">
                                        @Html.DisplayFor(model => model.WoType!.TypeName)
                                    </span>
                                </dd>
                            </dl>

                            <dl class="col-6">
                                <dt class="fw-semibold text-uppercase text-secondary mb-1">
                                    @Html.DisplayNameFor(model => model.Status)
                                </dt>
                                <dd>
                                    <span class="badge bg-secondary rounded-5 p-2 px-3">
                                        @Html.DisplayFor(model => model.Status!.StatusName)
                                    </span>
                                </dd>
                            </dl>

                            <dl class="col-6">
                                <dt class="fw-semibold text-uppercase text-secondary mb-1">
                                    @Html.DisplayNameFor(model => model.CreatedAt)
                                </dt>
                                <dd class="fw-medium text-secondary-emphasis">
                                    @Model?.CreatedAt.ToTanggalIndonesia()
                                </dd>
                            </dl>

                            <dl class="col-6">
                                <dt class="fw-semibold text-uppercase text-secondary mb-1">
                                    @Html.DisplayNameFor(model => model.User)
                                </dt>
                                <dd class="fw-medium text-secondary-emphasis">
                                    @Html.DisplayFor(model => model.User!.FullName)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </article>

                @* Contact person card *@
                <article class="card shadow-sm mb-3 p-2 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-person-fill text-primary me-1"></i> Contact Person</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <dl class="text-bg-light p-3 rounded-4 mb-2">
                            <dt class="fw-semibold mb-2"><i class="bi bi-geo-alt-fill"></i> Lokasi</dt>
                            <dd class="text-secondary-emphasis">CP Lokasi @Model?.XS1 : <br /> @Html.DisplayFor(model => model.XS3)</dd>
                        </dl>

                        <dl class="text-bg-light p-3 rounded-4 mb-2">
                            <dt class="fw-semibold mb-2"><i class="bi bi-tools"></i> Workshop</dt>
                            <dd class="text-secondary-emphasis">CP Workshop @Model?.XS2 : <br /> @Html.DisplayFor(model => model.XS4)</dd>
                        </dl>
                    </div>
                </article>

                @* Approvals card *@
                <article class="card shadow-sm mb-3 p-2 rounded-4">
                    <header class="card-header mt-2 fw-semibold bg-transparent border-bottom-0">
                        <h2 class="card-title mb-0 h5"><i class="bi bi-check-circle-fill text-primary me-1"></i> Approvals</h2>
                    </header>
                    <hr class="mx-3 my-2" />

                    <div class="card-body">
                        <dl class="text-bg-light p-3 rounded-4 mb-2">
                            <dt class="fw-semibold text-secondary mb-2">Coring Coordinator</dt>
                            <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.Requester)</dd>
                        </dl>

                        <dl class="text-bg-light p-3 rounded-4 mb-2">
                            <dt class="fw-semibold text-secondary mb-2">Pjs. Subsurface Services Mgr</dt>
                            <dd class="fw-medium text-secondary-emphasis">@Html.DisplayFor(model => model.Approved)</dd>
                        </dl>
                    </div>
                </article>
            </div>
        </div>
    </section>

    <!-- ================= PROFIT & LOSS DETAIL ================= -->
    <section class="tab-pane" id="pnl-tab-pane" role="tabpanel" aria-labelledby="pnl-tab" tabindex="0">
        @if (pnl == null) {
            <div class="alert alert-warning d-flex align-items-center mt-3" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                Belum ada data Profit &amp; Loss untuk WO ini.
            </div>

            <a asp-action="CreateProfitLoss" asp-route-workOrderId="@Model!.WorkOrderId" class="btn btn-success" role="button">
                <i class="bi bi-file-earmark-plus"></i> Buat Profit &amp; Loss
            </a>
        } else {
            <!-- List Vendor -->
            <article class="card shadow-sm mb-3 p-2 rounded-4">
                <header class="card-header fw-semibold fw-semibold bg-transparent border-bottom-0">
                    <h2 class="card-title mb-0 h5"><i class="bi bi-building-fill text-primary me-1"></i> Vendor yang ditawarkan</h2>
                </header>
                <hr class="mx-3 my-2" />

                <div class="card-body">
                    <div class="d-flex gap-2">
                        @if (ViewBag.SelectedVendorNames is List<string> names && names.Count > 0) {
                            @foreach (var name in names) {
                                <div class="badge border rounded-5 text-secondary fw-medium p-2">@name</div>
                            }
                        }
                    </div>
                </div>
            </article>

            <!-- Tagihan PDSI -->
            <article class="card shadow-sm mb-3 p-2 rounded-4">
                <header class="card-header fw-semibold fw-semibold bg-transparent border-bottom-0">
                    <h2 class="card-title mb-0 h5"><i class="bi bi-bar-chart text-primary me-1"></i> Ringkasan Profit & Loss</h2>
                </header>
                <hr class="mx-3 my-2" />

                <div class="card-body">
                    <div class="row g-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 h6">Tagihan PDSI</h3>

                            <a asp-action="EditProfitLoss" asp-route-id="@pnl.ProfitLossId" class="btn btn-outline-primary" role="button">Hitung Ulang</a>
                        </div>

                        <div class="col-md-3">
                            <div class="fw-semibold">Tarif Awal</div>
                            <div>@pnl.TarifAwal.ToIDR()</div>
                        </div>
                        <div class="col-md-3">
                            <div class="fw-semibold">Tarif Add</div>
                            <div>@pnl.TarifAdd.ToIDR()</div>
                        </div>
                        <div class="col-md-3">
                            <div class="fw-semibold">KM per 25 Km</div>
                            <div>@pnl.KmPer25</div>
                        </div>
                        <div class="col-md-3">
                            <div class="fw-semibold">Cost Operator</div>
                            <div>@pnl.OperatorCost.ToIDR()</div>
                            <div class="small text-muted"> = Tarif Add * KM per 25 Km</div>
                        </div>
                        <div class="col-md-3">
                            <div class="fw-semibold">Revenue</div>
                            <div class="fw-bold">@pnl.Revenue.ToIDR()</div>
                            <div class="small text-muted"> = Tarif Awal + Cost Operator</div>
                        </div>
                        <div class="col-md-3">
                            <div class="fw-semibold">Best Vendor</div>
                            <div class="text-success fw-semibold">@pnl.SelectedVendorName</div>
                        </div>
                        <div class="col-md-3">
                            <div class="fw-semibold">Final Offer</div>
                            <div>@pnl.SelectedFinalOffer.ToIDR()</div>
                        </div>
                        <div class="col-md-3">
                            <div class="fw-semibold">Profit</div>
                            <div class="fw-bold text-success">@pnl.Profit.ToIDR() (@pnl.ProfitPercent.ToPersen())</div>
                            <div class="small text-muted"> = Revenue − Best Offer</div>
                        </div>
                    </div>
                </div>
            </article>

            <!-- Penawaran Vendor -->
            <article class="card shadow-sm mb-3 p-2 rounded-4">
                <header class="card-header fw-semibold fw-semibold bg-transparent border-bottom-0">
                    <h2 class="card-title mb-0 h5"><i class="bi bi-award text-primary me-1"></i> Perbandingan Vendor (Vendor yang Memberi Penawaran)</h2>
                </header>
                <hr class="mx-3 my-2" />

                <div class="card-body">
                    <div class="table-responsive rounded-3">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-uppercase">Vendor</th>
                                    <th class="text-uppercase">Final Offer</th>
                                    <th class="text-uppercase">Profit</th>
                                    <th class="text-uppercase">Profit %</th>
                                    <th class="text-center">Result</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var row in pnl.Rows) {
                                    <tr class="@(row.IsSelected ? "table-success" : "")">
                                        <td>@row.VendorName</td>
                                        <td>@row.FinalOffer.ToIDR()</td>
                                        <td>@row.Profit.ToIDR()</td>
                                        <td>@row.ProfitPercent.ToPersen()</td>
                                        <td class="text-center">
                                            @if (row.IsSelected == true) {
                                                <span class="badge text-bg-success">Terpilih</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="small text-muted">
                        Best offer dipilih otomatis sebagai harga terendah.
                    </div>
                </div>
            </article>
        }
    </section>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var triggerEl = document.querySelector('#wo-tab')
            var tab = new bootstrap.Tab(triggerEl)
            tab.show() // force tab aktif saat load
        });
    </script>
}