@model ProcurementHTE.Web.Models.ViewModels.WorkOrderCreateViewModel
@{
    ViewData["Title"] = "Buat Work Order";
    var partialName = ViewBag.CreatePartial as string ?? "_CreateOther";
    var woTypeName = ViewBag.SelectedWoTypeName as string ?? "Other";
}

<div class="row g-3 mt-1">
    <div class="col-12 col-md-6">
        <label asp-for="WorkOrder.FromLocation" class="form-label">Dari</label>
        <input asp-for="WorkOrder.FromLocation" class="form-control" />
        <span asp-validation-for="WorkOrder.FromLocation" class="text-danger small"></span>
    </div>

    <div class="col-12 col-md-6">
        <label asp-for="WorkOrder.Destination" class="form-label">Ke</label>
        <input asp-for="WorkOrder.Destination" class="form-control" />
        <span asp-validation-for="WorkOrder.Destination" class="text-danger small"></span>
    </div>
</div>

<div class="hstack justify-content-between mt-4 position-relative z-2">
    <strong>Detail Items</strong>
    <button type="button" id="btn-add-detail" class="btn btn-sm btn-outline-primary">
        <i class="bi bi-plus-lg"></i> Add Row
    </button>
</div>

<div class="row g-3" id="details-container">
    @if (Model.Details != null && Model.Details.Count > 0) {
        for (var i = 0; i < Model.Details.Count; i++) {
            var key = i.ToString();
            <div class="col-12 detail-row position-relative">
                <input type="hidden" name="Details.Index" value="@key" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Item Name</label>
                        <input type="text" class="form-control"
                               name="Details[@key].ItemName" value="@(Model.Details[i].ItemName)" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Qty</label>
                        <input type="number" class="form-control" min="1"
                               name="Details[@key].Quantity"
                               value="@(Model.Details[i].Quantity == 0 ? "" : Model.Details[i].Quantity)" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Unit</label>
                        <input type="text" class="form-control"
                               name="Details[@key].Unit" value="@(Model.Details[i].Unit)" />
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="button" class="btn btn-outline-danger js-remove-detail w-100">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
    } else {
        var key = Guid.NewGuid().ToString("N").Substring(0, 8);
        <div class="col-12 detail-row border rounded p-3">
            <input type="hidden" name="Details.Index" value="@key" />
            <div class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label class="form-label">Item Name</label>
                    <input class="form-control" name="Details[@key].ItemName" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Qty</label>
                    <input class="form-control" type="number" min="1" name="Details[@key].Quantity" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Unit</label>
                    <input class="form-control" name="Details[@key].Unit" />
                </div>
                <div class="col-md-1 d-grid">
                    <button type="button" class="btn btn-outline-danger js-remove-detail">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-4 d-flex gap-2">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createWoModal">Simpan WO Moving</button>
    <a class="btn btn-secondary" asp-action="SelectType" role="button">Kembali</a>
</div>

@* Modal *@
<div class="modal fade" id="createWoModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createWoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="createWoModalLabel">Create Work Order</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Apakah Anda ingin menambahkan Work Order baru? atau menyimpannya sebagai draft</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" name="submitAction" value="Draft">Save</button>
                <button type="submit" class="btn btn-success" name="submitAction" value="Created">Create</button>
            </div>
        </div>
    </div>
</div>
