@using ProcurementHTE.Web.Models.ViewModels
@model IEnumerable<DashboardWoViewModel>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-4">
    <h1 class="h3 mb-0">Dashboard</h1>
    <div class="text-muted">
        <i class="bi bi-clock"></i> @DateTime.Now.ToString("dddd, dd MMMM yyyy")
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-people-fill text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Total Users</div>
                        <div class="fs-4 fw-bold">""</div>
                        <div class="text-success small">
                            <i class="bi bi-arrow-up"></i> 12% dari bulan lalu
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-graph-up-arrow text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Revenue</div>
                        <div class="fs-4 fw-bold">Rp </div>
                        <div class="text-success small">
                            <i class="bi bi-arrow-up"></i> 8% dari bulan lalu
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-cart-check-fill text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Total Work Orders</div>
                        <div class="fs-4 fw-bold">@ViewBag.TotalWo</div>
                        <div class="text-secondary small">bulan ini</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-bag-check-fill text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Products</div>
                        <div class="fs-4 fw-bold">""</div>
                        <div class="text-success small">
                            <i class="bi bi-arrow-up"></i> 5% dari bulan lalu
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts & Tables Row -->
<div class="row g-3 mb-4">
    <!-- Sales Chart -->
    <div class="col-xl-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Sales Overview</h5>
            </div>
            <div class="card-body">
                <canvas id="salesChart" height="80"></canvas>
            </div>
        </div>
    </div>

    <!-- Traffic Sources -->
    <div class="col-xl-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Traffic Sources</h5>
            </div>
            <div class="card-body">
                <canvas id="trafficChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities & Orders -->
<div class="row g-3 mb-4">
    <!-- Recent Orders -->
    <div class="col-xl-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Recent Work Orders</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive p-2">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="mw-100 text-nowrap border-end">@Html.DisplayNameFor(model => model.WoNum)</th>
                                <th class="mw-100 text-nowrap border-end">@Html.DisplayNameFor(model => model.Description)</th>
                                <th class="mw-100 text-nowrap border-end">@Html.DisplayNameFor(model => model.ProcurementType)</th>
                                <th class="mw-100 text-nowrap border-end">@Html.DisplayNameFor(model => model.StatusName)</th>
                                <th class="mw-100 text-nowrap border-end">@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model == null || !Model.Any()) {
                                <tr>
                                    <td colspan="5" class="text-center">No Work Order data found</td>
                                </tr>
                            } else {
                                foreach (var order in Model) {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => order.WoNum)</td>
                                        <td>@(order.Description ?? "-")</td>
                                        <td>@Html.DisplayFor(modelItem => order.ProcurementType)</td>
                                        <td>
                                            @if (order.StatusName == "Created") {
                                                <span class="badge text-bg-success">@Html.DisplayFor(modelItem => order.StatusName)</span>
                                            } else if (order.StatusName == "Draft") {
                                                <span class="badge text-bg-secondary">@Html.DisplayFor(modelItem => order.StatusName)</span>
                                            } else {
                                                <span class="badge text-bg-danger">@Html.DisplayFor(modelItem => order.StatusName)</span>
                                            }
                                        </td>
                                        <td>@order.CreatedAt.ToString("d MMM yyyy")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white border-0 py-3">
                <a href="#" class="btn btn-outline-primary btn-sm">View All Orders</a>
            </div>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="col-xl-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Recent Activities</h5>
            </div>
            <div class="card-body">
                <div class="activity-list">
                    @* @foreach (var activity in Model.RecentActivities)
                    {
                        <div class="d-flex mb-3 pb-3 border-bottom">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2">
                                    <i class="bi @activity.Icon text-primary"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <div class="small fw-semibold">@activity.Title</div>
                                <div class="text-muted small">@activity.Description</div>
                                <div class="text-muted small">@activity.Time</div>
                            </div>
                        </div>
                    } *@
                </div>
            </div>
        </div>
    </div>
</div>
