@using MigraDocCore.DocumentObjectModel
@using ProcurementHTE.Web.Models.ViewModels
@model IEnumerable<DashboardWoViewModel>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-4">
    <h1 class="h3 mb-0">Dashboard</h1>
    <div class="text-muted">
        <i class="bi bi-clock"></i> @DateTime.Now.ToString("dddd, dd MMMM yyyy")
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-people-fill text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Total Users</div>
                        <div class="fs-4 fw-bold">@ViewBag.TotalUsers</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-graph-up-arrow text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Revenue</div>
                        <div class="fs-4 fw-bold">Rp @ViewBag.TotalRevenueThisMonth.ToString("N0")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-cart-check-fill text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Total Work Orders</div>
                        <div class="fs-4 fw-bold">@ViewBag.TotalWo</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-check2-circle text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Approval Status</div>
                        <div class="fs-4 fw-bold">@((ViewBag.ApprovalStatus as IEnumerable<dynamic>)?.Sum(x => (int)x.Count) ?? 0)</div>
                        <div class="text-muted small">
                            Approved / Pending / Rejected
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (User.IsInRole("Admin")) {
@* Charts & Tables Row *@
<div class="row g-3 mb-4">
    @* Recent Orders *@
    <div class="col-xl-8">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Recent Work Orders</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive p-2">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="mw-100 text-nowrap border-end">@Html.DisplayNameFor(model => model.WoNum)</th>
                                <th class="mw-100 text-nowrap border-end">@Html.DisplayNameFor(model => model.Description)</th>
                                <th class="mw-100 text-nowrap border-end">@Html.DisplayNameFor(model => model.ProcurementType)</th>
                                <th class="mw-100 text-nowrap border-end">@Html.DisplayNameFor(model => model.StatusName)</th>
                                <th class="mw-100 text-nowrap border-end">@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model == null || !Model.Any()) {
                                <tr>
                                    <td colspan="5" class="text-center">No Work Order data found</td>
                                </tr>
                            } else {
                                foreach (var order in Model) {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => order.WoNum)</td>
                                        <td class="w-50">@(order.Description ?? "-")</td>
                                        <td>@Html.DisplayFor(modelItem => order.ProcurementType)</td>
                                        <td>
                                            @if (order.StatusName == "Created") {
                                                <span class="badge text-bg-success">@Html.DisplayFor(modelItem => order.StatusName)</span>
                                            } else if (order.StatusName == "Draft") {
                                                <span class="badge text-bg-secondary">@Html.DisplayFor(modelItem => order.StatusName)</span>
                                            } else {
                                                <span class="badge text-bg-danger">@Html.DisplayFor(modelItem => order.StatusName)</span>
                                            }
                                        </td>
                                        <td>@order.CreatedAt.ToString("d MMM yyyy")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white border-0 py-3">
                <a asp-controller="WorkOrders" asp-action="Index" class="btn btn-outline-primary btn-sm">View All Work Orders</a>
            </div>
        </div>
        
        @* Revenue Chart  *@
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Profit &amp; Loss Overview</h5>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" height="80"></canvas>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row gap-3">
            @* Approval Status Chart *@
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">Approval Status</h5>
                </div>
                <div class="card-body">
                    <canvas id="approvalStatusChart"></canvas>
                </div>
            </div>

            @* WO Status Chart *@
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">Work Orders by Status</h5>
                </div>
                <div class="card-body">
                    <canvas id="woStatusChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4">
        @* Recent Activities *@
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Recent Activities</h5>
            </div>
            <div class="card-body">
                <div class="activity-list">
                    @if (ViewBag.RecentActivities != null) {
                      @foreach (var activity in ViewBag.RecentActivities)
                      {
                          <div class="d-flex mb-3 pb-3 border-bottom">
                              <div class="flex-shrink-0">
                                  <div class="bg-primary bg-opacity-10 rounded-circle p-2 py-1">
                                      <i class="bi bi-info text-primary"></i>
                                  </div>
                              </div>
                              <div class="flex-grow-1 ms-3">
                                  <div class="small fw-semibold">@activity.User</div>
                                  <div class="text-muted small">@activity.Description</div>
                                  <div class="text-muted small">@activity.Time</div>
                              </div>
                          </div>
                      } 
                    } else {
                      <div class="text-muted small">No activities</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const woStatusData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.WoByStatus ?? new object[] {}))
        const revenuePerMonth = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.RevenuePerMonth ?? new object[] {}))
        const approvalStatus = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ApprovalStatus ?? new object[] {}));

        // WO by Status Chart
        const woStatusCtx = document.getElementById('woStatusChart').getContext('2d');
        new Chart(woStatusCtx, {
            type: 'doughnut',
            data: {
                labels: woStatusData.map(item => item.Status),
                datasets: [{
                    data: woStatusData.map(item => item.Count),
                    backgroundColor: ['#0d6efd','#198754','#ffc107','#dc3545','#6c757d'],
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                },
            }
        });

        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        const monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
        const revenueLabels = revenuePerMonth.map(item => monthNames[item.Month - 1]);
        const revenueData = revenuePerMonth.map(item => item.Total);

        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: revenueLabels,
                datasets: [{
                    label: 'Revenue',
                    data: revenueData,
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.12)',
                    tension: 0.35,
                    fill: true,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return 'Rp ' + value.toLocaleString('id-ID');
                            }
                        }
                    }
                }
            }
        });

        // Approval Status Chart
        const approvalEl = document.getElementById('approvalStatusChart').getContext('2d');
        new Chart(approvalEl, {
            type: 'doughnut',
            data: {
                labels: approvalStatus.map(x => x.Status),
                datasets: [{
                    data: approvalStatus.map(x => x.Count),
                    backgroundColor: ['#198754', '#ffc107', '#dc3545'],
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });
    </script>
}