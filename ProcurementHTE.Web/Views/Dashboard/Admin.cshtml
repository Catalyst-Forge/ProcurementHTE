@model ProcurementHTE.Web.Models.ViewModels.DashboardSummaryViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-4">
    <div>
        <h1 class="h3 mb-0">Dashboard</h1>
        <div class="text-muted">
            <i class="bi bi-clock"></i> @DateTime.Now.ToString("dddd, dd MMMM yyyy")
        </div>
    </div>
    <span class="badge text-bg-primary">@Model.RoleName</span>
</div>

<div class="row g-3 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-people-fill text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Total Users</div>
                        <div class="fs-4 fw-bold">@Model.TotalUsers</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-graph-up-arrow text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Revenue</div>
                        <div class="fs-4 fw-bold">Rp @Model.TotalRevenueThisMonth.ToString("N0")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-cart-check-fill text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Total Procurements</div>
                        <div class="fs-4 fw-bold">@Model.TotalProcurements</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-check2-circle text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Approval Status</div>
                        <div class="fs-4 fw-bold">@((Model.ApprovalStatus?.Sum(x => x.Count)) ?? 0)</div>
                        <div class="text-muted small">Approved / Pending / Rejected</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-xl-8">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Recent Procurements</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive p-2">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="mw-100 text-nowrap border-end">Procurement No.</th>
                                <th class="mw-100 text-nowrap border-end">Job Name</th>
                                <th class="mw-100 text-nowrap border-end">Job Type</th>
                                <th class="mw-100 text-nowrap border-end">Status</th>
                                <th class="mw-100 text-nowrap border-end">Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentProcurements == null || !Model.RecentProcurements.Any()) {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">No Procurement data found</td>
                                </tr>
                            } else {
                                foreach (var order in Model.RecentProcurements) {
                                    <tr>
                                        <td>@order.ProcNum</td>
                                        <td class="w-50">@(order.JobName ?? "-")</td>
                                        <td>@(order.JobTypeName ?? "-")</td>
                                        <td>
                                            @if (order.StatusName == "Created") {
                                                <span class="badge text-bg-success">@order.StatusName</span>
                                            } else if (order.StatusName == "Draft") {
                                                <span class="badge text-bg-secondary">@order.StatusName</span>
                                            } else {
                                                <span class="badge text-bg-danger">@order.StatusName</span>
                                            }
                                        </td>
                                        <td>@order.CreatedAt.ToString("d MMM yyyy")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white border-0 py-3">
                <a asp-controller="Procurements" asp-action="Index" class="btn btn-outline-primary btn-sm">View All Procurements</a>
            </div>
        </div>

        <div class="card shadow-sm mb-3">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Profit &amp; Loss Overview</h5>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" height="80"></canvas>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row gap-3">
            <div class="card shadow-sm mb-3 flex-fill">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">Approval Status</h5>
                </div>
                <div class="card-body">
                    <canvas id="approvalStatusChart"></canvas>
                </div>
            </div>

            <div class="card shadow-sm mb-3 flex-fill">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">Procurements by Status</h5>
                </div>
                <div class="card-body">
                    <canvas id="procurementStatusChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Recent Activities</h5>
            </div>
            <div class="card-body">
                <div class="activity-list">
                    @if (Model.RecentActivities != null && Model.RecentActivities.Any()) {
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <div class="d-flex mb-3 pb-3 border-bottom">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 py-1">
                                        <i class="bi bi-info text-primary"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <div class="small fw-semibold">@activity.User</div>
                                    <div class="text-muted small">@activity.Description</div>
                                    <div class="text-muted small">@activity.Time.ToString("dd MMM yyyy HH:mm")</div>
                                </div>
                            </div>
                        }
                    } else {
                        <div class="text-muted small">No activities</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("~/Views/Dashboard/Partials/_DashboardChartsScripts.cshtml", Model)
}
