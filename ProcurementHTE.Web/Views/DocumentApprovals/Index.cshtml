@using ProcurementHTE.Core.Models
@model IEnumerable<DocumentApprovals>
@{
    ViewData["Title"] = "Document Approvals";
    var jobTypes = ViewBag.JobTypes as List<JobTypes> ?? new();
    var selectedJobType = Context.Request.Query["jobTypeId"].ToString();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-1">Document Approvals</h1>
        <p class="text-muted mb-0">Kelola urutan approval untuk setiap mapping Job Type - Document.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> New Approval Step</a>
    </div>
</div>

<form method="get" class="border rounded-3 p-3 mb-3 d-flex flex-wrap gap-2 align-items-center">
    <div class="w-auto">
        <label class="form-label small text-muted mb-1">Filter Job Type</label>
        <select class="form-select" name="jobTypeId" onchange="this.form.submit()"
                asp-items="@(new SelectList(jobTypes, "JobTypeId", "TypeName", selectedJobType))">
            <option value="">All Job Types</option>
        </select>
    </div>
    <div class="ms-auto">
        <button type="submit" class="btn btn-outline-secondary"><i class="bi bi-arrow-clockwise"></i> Refresh</button>
    </div>
</form>

<div class="table-responsive border rounded-3">
    <table class="table table-hover mobile-table">
        <thead class="table-light">
            <tr>
                <th>Job Type</th>
                <th>Document</th>
                <th>Role</th>
                <th class="text-center">Level</th>
                <th class="text-center">Sequence</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">No approval steps available.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.JobTypeDocument?.JobType?.TypeName</td>
                        <td>@item.JobTypeDocument?.DocumentType?.Name</td>
                        <td>@item.Role?.Name</td>
                        <td class="text-center">@item.Level</td>
                        <td class="text-center">@item.SequenceOrder</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@item.DocumentApprovalId" class="btn btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Delete this approval step?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.DocumentApprovalId" />
                                    <button type="submit" class="btn btn-outline-danger"><i class="bi bi-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
