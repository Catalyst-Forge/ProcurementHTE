<script>
    (function () {
        var script = document.currentScript;
        var container =
            (script && typeof script.closest === "function" && script.closest("[data-partial-root]")) ||
            document;

        var parseValidation = function () {
            var $ = window.jQuery;
            if (!$ || !$.validator || !$.validator.unobtrusive) {
                return false;
            }
            $.validator.unobtrusive.parse(container);
            return true;
        };

        if (parseValidation()) {
            return;
        }

        window.addEventListener(
            "load",
            function () {
                if (!parseValidation()) {
                    console.warn("jQuery validation scripts are not loaded.");
                }
            },
            { once: true }
        );
    })();
</script>
